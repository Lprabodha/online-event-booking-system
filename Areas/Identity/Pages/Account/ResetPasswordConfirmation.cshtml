@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password reset complete";
    ViewData["Description"] = "Your password has been successfully reset. You can now sign in with your new password.";
}

<section class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-navy-950 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-navy-950 to-teal-900/20"></div>
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>

    <div class="max-w-md w-full space-y-8 relative z-10">
        <div class="text-center">
            <div class="mx-auto h-20 w-20 bg-gradient-to-r from-green-500 to-teal-500 rounded-full flex items-center justify-center mb-6 animate-bounce">
                <svg class="h-10 w-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            <h1 class="text-4xl font-bold text-white mb-3">Password Reset Complete!</h1>
            <p class="text-gray-400 text-lg">Your password has been successfully updated</p>
        </div>

        <div class="bg-white/5 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/10 p-8">
            <div class="text-center space-y-6">
                <div class="space-y-4">
                    <div class="flex items-center justify-center space-x-3 text-gray-300">
                        <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Password successfully updated</span>
                    </div>
                    
                    <div class="flex items-center justify-center space-x-3 text-gray-300">
                        <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        <span>Your account is now secure</span>
                    </div>
                    
                    <div class="flex items-center justify-center space-x-3 text-gray-300">
                        <svg class="h-5 w-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>You can now sign in with your new password</span>
                    </div>
                </div>

                <div class="bg-white/5 rounded-xl p-4 border border-white/10">
                    <h3 class="text-white font-semibold mb-2">Security Tips:</h3>
                    <ul class="text-gray-300 text-sm space-y-2 text-left">
                        <li class="flex items-start space-x-2">
                            <span class="text-green-400 font-bold">✓</span>
                            <span>Use a unique password for your Star Events account</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <span class="text-green-400 font-bold">✓</span>
                            <span>Consider using a password manager for better security</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <span class="text-green-400 font-bold">✓</span>
                            <span>Enable two-factor authentication if available</span>
                        </li>
                    </ul>
                </div>

                <div class="space-y-4">
                    <a asp-page="./Login" 
                       class="w-full bg-gradient-to-r from-purple-600 to-teal-500 text-white py-4 px-6 rounded-xl font-semibold hover:from-purple-700 hover:to-teal-600 focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-navy-950 transition-all duration-300 shadow-lg shadow-purple-500/25 hover:shadow-purple-500/40 transform hover:scale-[1.02] inline-block text-center">
                        Sign In Now
                    </a>
                    
                    <a href="/" 
                       class="w-full bg-white/10 border border-white/20 text-white py-4 px-6 rounded-xl font-semibold hover:bg-white/20 transition-all duration-300 inline-block text-center">
                        Back to Home
                    </a>
                </div>
            </div>
        </div>

        <!-- Additional Security Section -->
        <div class="bg-white/5 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/10 p-6">
            <div class="text-center">
                <h3 class="text-lg font-semibold text-white mb-3">Keep Your Account Secure</h3>
                <p class="text-gray-400 text-sm mb-4">
                    For additional security, we recommend regularly updating your password and monitoring your account activity.
                </p>
                <div class="flex flex-col sm:flex-row gap-3 justify-center">
                    <a href="/Customer/Profile" 
                       class="inline-flex items-center px-4 py-2 bg-white/10 border border-white/20 rounded-xl text-white hover:bg-white/20 transition-all duration-300">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        View Profile
                    </a>
                    <a href="mailto:support@starevents.com" 
                       class="inline-flex items-center px-4 py-2 bg-white/10 border border-white/20 rounded-xl text-white hover:bg-white/20 transition-all duration-300">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        Contact Support
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
