@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    ViewData["Description"] = "Create a new password for your Star Events account.";
}

<section class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-navy-950 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-navy-950 to-teal-900/20"></div>
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>

    <div class="max-w-md w-full space-y-8 relative z-10">
        <div class="text-center">
            <div class="mx-auto h-16 w-16 bg-gradient-to-r from-purple-500 to-teal-500 rounded-full flex items-center justify-center mb-6">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                </svg>
            </div>
            <h1 class="text-4xl font-bold text-white mb-3">Reset Password</h1>
            <p class="text-gray-400 text-lg">Create a new secure password for your account</p>
        </div>

        <div class="bg-white/5 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/10 p-8">
            <form class="space-y-6" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-400"></div>
            <input asp-for="Input.Code" type="hidden" />
                
                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-300 mb-3">
                        Email address
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                            </svg>
                        </div>
                        <input asp-for="Input.Email"
                               type="email"
                               autocomplete="username"
                               class="w-full pl-12 pr-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 backdrop-blur-sm"
                               placeholder="Enter your email address">
                    </div>
                    <span asp-validation-for="Input.Email" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-300 mb-3">
                        New Password
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                        </div>
                        <input asp-for="Input.Password"
                               type="password"
                               autocomplete="new-password"
                               class="w-full pl-12 pr-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 backdrop-blur-sm"
                               placeholder="Enter your new password">
                    </div>
                    <span asp-validation-for="Input.Password" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-300 mb-3">
                        Confirm New Password
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <input asp-for="Input.ConfirmPassword"
                               type="password"
                               autocomplete="new-password"
                               class="w-full pl-12 pr-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 backdrop-blur-sm"
                               placeholder="Confirm your new password">
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm"></span>
                </div>

                <!-- Password Requirements -->
                <div class="bg-white/5 rounded-xl p-4 border border-white/10">
                    <h4 class="text-white font-semibold mb-3 text-sm">Password Requirements:</h4>
                    <ul class="text-gray-300 text-xs space-y-1">
                        <li class="flex items-center space-x-2">
                            <svg class="h-3 w-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>At least 6 characters long</span>
                        </li>
                        <li class="flex items-center space-x-2">
                            <svg class="h-3 w-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Mix of letters and numbers recommended</span>
                        </li>
                        <li class="flex items-center space-x-2">
                            <svg class="h-3 w-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Avoid common passwords</span>
                        </li>
                    </ul>
            </div>

                <div>
                    <button type="submit"
                            class="w-full bg-gradient-to-r from-purple-600 to-teal-500 text-white py-4 px-6 rounded-xl font-semibold hover:from-purple-700 hover:to-teal-600 focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-navy-950 transition-all duration-300 shadow-lg shadow-purple-500/25 hover:shadow-purple-500/40 transform hover:scale-[1.02]">
                        Reset Password
                    </button>
            </div>

                <div class="text-center">
                    <p class="text-sm text-gray-400">
                        Remember your password?
                        <a asp-page="./Login" class="text-purple-400 hover:text-purple-300 font-medium ml-1 transition-colors">
                            Sign in here
                        </a>
                    </p>
            </div>
        </form>
    </div>
</div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
