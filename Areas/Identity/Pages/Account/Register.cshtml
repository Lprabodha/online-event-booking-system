@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    ViewData["Description"] = "Create your free TicketBooking account to start booking tickets for amazing events.";
}

<section class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-navy-950 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-navy-950 to-teal-900/20"></div>
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>

    <div class="max-w-md w-full space-y-8 relative z-10">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-white mb-3">Create your account</h1>
            <p class="text-gray-400 text-lg">Join thousands of event-goers today</p>
        </div>

        <div class="bg-white/5 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/10 p-6">
            <div class="relative mb-6">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-white/20"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-4 bg-navy-950 text-gray-400">Or sign up with</span>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <form method="post" asp-page="./ExternalLogin" asp-page-handler="Challenge" asp-route-provider="Google" asp-route-returnUrl="@Model.ReturnUrl">
                    <button type="submit" class="w-full inline-flex justify-center py-3 px-4 border border-white/20 rounded-xl shadow-sm text-sm font-medium text-gray-300 bg-white/5 hover:bg-white/10 transition-all duration-300 backdrop-blur-sm">
                        <svg class="w-5 h-5" viewBox="0 0 24 24">
                            <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                            <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                            <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                            <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                        </svg>
                        <span class="ml-2">Google</span>
                    </button>
                </form>

                <form method="post" asp-page="./ExternalLogin" asp-page-handler="Challenge" asp-route-provider="Microsoft" asp-route-returnUrl="@Model.ReturnUrl">
                    <button type="submit" class="w-full inline-flex justify-center py-3 px-4 border border-white/20 rounded-xl shadow-sm text-sm font-medium text-gray-300 bg-white/5 hover:bg-white/10 transition-all duration-300 backdrop-blur-sm">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M11.4 24H0V12.6h11.4V24zM24 24H12.6V12.6H24V24zM11.4 11.4H0V0h11.4v11.4zM24 11.4H12.6V0H24v11.4z"/>
                        </svg>
                        <span class="ml-2">Microsoft</span>
                    </button>
                </form>
            </div>
        </div>
        <div class="bg-white/5 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/10 p-8">
            <form class="space-y-6" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-400"></div>
                
                <div>
                    <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-300 mb-3">
                        Full Name
                    </label>
                    <input asp-for="Input.FullName"
                           type="text"
                           autocomplete="name"
                           class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 backdrop-blur-sm"
                           placeholder="John Doe">
                    <span asp-validation-for="Input.FullName" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.ContactNumber" class="block text-sm font-medium text-gray-300 mb-3">
                        Contact Number
                    </label>
                    <input asp-for="Input.ContactNumber"
                           type="tel"
                           autocomplete="tel"
                           class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 backdrop-blur-sm"
                           placeholder="+1 (555) 123-4567">
                    <span asp-validation-for="Input.ContactNumber" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-300 mb-3">
                        Email address
                    </label>
                    <input asp-for="Input.Email"
                           type="email"
                           autocomplete="email"
                           class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 backdrop-blur-sm"
                           placeholder="john@example.com">
                    <span asp-validation-for="Input.Email" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Address" class="block text-sm font-medium text-gray-300 mb-3">
                        Address
                    </label>
                    <textarea asp-for="Input.Address"
                              autocomplete="address-line1"
                              rows="3"
                              class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 backdrop-blur-sm resize-none"
                              placeholder="123 Main Street, City, State 12345"></textarea>
                    <span asp-validation-for="Input.Address" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-300 mb-3">
                        Password
                    </label>
                    <input asp-for="Input.Password"
                           type="password"
                           autocomplete="new-password"
                           class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 backdrop-blur-sm"
                           placeholder="Create a strong password">
                    <span asp-validation-for="Input.Password" class="text-red-400 text-sm"></span>
                    <p class="mt-2 text-sm text-gray-400">
                        Must be at least 6 characters with uppercase, lowercase, and numbers.
                    </p>
                </div>

                <div>
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-300 mb-3">
                        Confirm password
                    </label>
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           autocomplete="new-password"
                           class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 backdrop-blur-sm"
                           placeholder="Confirm your password">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm"></span>
                </div>

                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input id="terms"
                               name="terms"
                               type="checkbox"
                               required
                               class="h-4 w-4 text-purple-500 focus:ring-purple-500 border-white/20 rounded bg-white/5">
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="terms" class="text-gray-300">
                            I agree to the
                            <a href="/Terms" class="text-purple-400 hover:text-purple-300 font-medium transition-colors">Terms of Service</a>
                            and
                            <a href="/Privacy" class="text-purple-400 hover:text-purple-300 font-medium transition-colors">Privacy Policy</a>
                        </label>
                    </div>
                </div>

                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input id="newsletter"
                               name="newsletter"
                               type="checkbox"
                               class="h-4 w-4 text-purple-500 focus:ring-purple-500 border-white/20 rounded bg-white/5">
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="newsletter" class="text-gray-300">
                            Send me updates about new events and special offers
                        </label>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="w-full bg-gradient-to-r from-purple-600 to-teal-500 text-white py-4 px-6 rounded-xl font-semibold hover:from-purple-700 hover:to-teal-600 focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-navy-950 transition-all duration-300 shadow-lg shadow-purple-500/25 hover:shadow-purple-500/40 transform hover:scale-[1.02]">
                        Create account
                    </button>
                </div>

                <div class="text-center">
                    <p class="text-sm text-gray-400">
                        Already have an account?
                        <a href="/Identity/Account/Login" class="text-purple-400 hover:text-purple-300 font-medium ml-1 transition-colors">
                            Sign in here
                        </a>
                    </p>
                </div>
            </form>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
