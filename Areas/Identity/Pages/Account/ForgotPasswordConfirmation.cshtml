@page
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Check your email";
    ViewData["Description"] = "We've sent you a password reset link. Please check your email to continue.";
}

<section class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-navy-950 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-navy-950 to-teal-900/20"></div>
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>

    <div class="max-w-md w-full space-y-8 relative z-10">
        <div class="text-center">
            <div class="mx-auto h-20 w-20 bg-gradient-to-r from-green-500 to-teal-500 rounded-full flex items-center justify-center mb-6 animate-pulse">
                <svg class="h-10 w-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
            </div>
            <h1 class="text-4xl font-bold text-white mb-3">Check Your Email</h1>
            <p class="text-gray-400 text-lg">We've sent you a password reset link!</p>
        </div>

        <div class="bg-white/5 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/10 p-8">
            <div class="text-center space-y-6">
                <div class="space-y-4">
                    <div class="flex items-center justify-center space-x-3 text-gray-300">
                        <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Password reset email sent successfully</span>
                    </div>
                    
                    <div class="flex items-center justify-center space-x-3 text-gray-300">
                        <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Link expires in 24 hours</span>
                    </div>
                    
                    <div class="flex items-center justify-center space-x-3 text-gray-300">
                        <svg class="h-5 w-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Check your spam folder if needed</span>
                    </div>
                </div>

                <div class="bg-white/5 rounded-xl p-4 border border-white/10">
                    <h3 class="text-white font-semibold mb-2">What's next?</h3>
                    <ol class="text-gray-300 text-sm space-y-2 text-left">
                        <li class="flex items-start space-x-2">
                            <span class="text-purple-400 font-bold">1.</span>
                            <span>Check your email inbox for a message from Star Events</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <span class="text-purple-400 font-bold">2.</span>
                            <span>Click the "Reset My Password" button in the email</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <span class="text-purple-400 font-bold">3.</span>
                            <span>Create a new secure password for your account</span>
                        </li>
                    </ol>
                </div>

                <div class="space-y-4">
                    <a asp-page="./Login" 
                       class="w-full bg-gradient-to-r from-purple-600 to-teal-500 text-white py-4 px-6 rounded-xl font-semibold hover:from-purple-700 hover:to-teal-600 focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-navy-950 transition-all duration-300 shadow-lg shadow-purple-500/25 hover:shadow-purple-500/40 transform hover:scale-[1.02] inline-block text-center">
                        Back to Sign In
                    </a>
                    
                    <a asp-page="./ForgotPassword" 
                       class="w-full bg-white/10 border border-white/20 text-white py-4 px-6 rounded-xl font-semibold hover:bg-white/20 transition-all duration-300 inline-block text-center">
                        Send Another Email
                    </a>
                </div>
            </div>
        </div>

        <!-- Help Section -->
        <div class="bg-white/5 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/10 p-6">
            <div class="text-center">
                <h3 class="text-lg font-semibold text-white mb-3">Still having trouble?</h3>
                <p class="text-gray-400 text-sm mb-4">
                    If you don't see the email in your inbox, check your spam folder or contact our support team.
                </p>
                <div class="flex flex-col sm:flex-row gap-3 justify-center">
                    <a href="mailto:support@starevents.com" 
                       class="inline-flex items-center px-4 py-2 bg-white/10 border border-white/20 rounded-xl text-white hover:bg-white/20 transition-all duration-300">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        Contact Support
                    </a>
                    <a href="tel:+1234567890" 
                       class="inline-flex items-center px-4 py-2 bg-white/10 border border-white/20 rounded-xl text-white hover:bg-white/20 transition-all duration-300">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        Call Support
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
