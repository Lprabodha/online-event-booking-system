<section class="py-24 bg-slate-800">
    <div class="container mx-auto px-4">
        <h2 class="text-5xl font-bold text-white mb-16 text-center bg-gradient-to-r from-purple-400 to-teal-400 bg-clip-text text-transparent">You Might Also Like</h2>

        @if (Model.RelatedEvents != null && Model.RelatedEvents.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
                @foreach (var relatedEvent in Model.RelatedEvents)
                {
                    var relatedImageUrl = !string.IsNullOrEmpty(relatedEvent.Image) ? relatedEvent.Image : "/placeholder.svg?height=250&width=400";
                    var relatedEventDate = relatedEvent.EventDate.ToString("MMMM dd, yyyy");
                    var relatedEventTime = relatedEvent.EventTime.ToString("h:mm tt");
                    var relatedMinPrice = relatedEvent.Prices?.Where(p => p.IsActive).Min(p => p.Price) ?? 0;
                    var relatedPriceDisplay = relatedMinPrice > 0 ? $"LKR {relatedMinPrice}" : "Free";
                    var categoryColors = new Dictionary<string, string>
                    {
                        { "Music", "bg-blue-500/20 text-blue-300 border-blue-500/30" },
                        { "Sports", "bg-green-500/20 text-green-300 border-green-500/30" },
                        { "Technology", "bg-purple-500/20 text-purple-300 border-purple-500/30" },
                        { "Business", "bg-orange-500/20 text-orange-300 border-orange-500/30" },
                        { "Education", "bg-indigo-500/20 text-indigo-300 border-indigo-500/30" },
                        { "Arts", "bg-pink-500/20 text-pink-300 border-pink-500/30" }
                    };
                    var categoryColor = categoryColors.ContainsKey(relatedEvent.Category?.Name ?? "") 
                        ? categoryColors[relatedEvent.Category?.Name ?? ""] 
                        : "bg-gray-500/20 text-gray-300 border-gray-500/30";
                    
                    <div class="bg-slate-700/50 backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden hover:shadow-3xl transition-all hover:scale-105 border border-slate-600/50">
                        <img src="@relatedImageUrl" alt="@relatedEvent.Title" class="w-full h-56 object-cover">
                        <div class="p-8">
                            <div class="flex items-center justify-between mb-4">
                                <span class="@categoryColor text-sm font-bold px-4 py-2 rounded-full border">@relatedEvent.Category?.Name</span>
                                <span class="text-2xl font-bold text-green-400">@relatedPriceDisplay</span>
                            </div>
                            <h3 class="text-2xl font-bold text-white mb-3">@relatedEvent.Title</h3>
                            <p class="text-slate-300 mb-6">@(relatedEvent.Description?.Length > 100 ? relatedEvent.Description.Substring(0, 100) + "..." : relatedEvent.Description)</p>
                            <div class="flex items-center text-slate-400 text-sm mb-6">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                                </svg>
                                @relatedEventDate • @relatedEventTime
                            </div>
                            <a href="/Events/Details/@relatedEvent.Id" class="block w-full bg-gradient-to-r from-purple-500 to-teal-500 text-white text-center py-4 rounded-xl font-bold hover:from-purple-600 hover:to-teal-600 transition-all">
                                View Details
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <div class="w-16 h-16 bg-slate-700/50 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-slate-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">No Related Events Found</h3>
                <p class="text-slate-400">Check back later for more events in this category.</p>
            </div>
        }
    </div>
</section>
