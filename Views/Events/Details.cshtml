@model online_event_booking_system.Models.EventDetailsViewModel
@{
    ViewData["Title"] = $"{Model.Event.Title} - Event Details";
    ViewData["Description"] = !string.IsNullOrEmpty(Model.Event.Description) ? 
        (Model.Event.Description.Length > 160 ? Model.Event.Description.Substring(0, 160) + "..." : Model.Event.Description) : 
        "Event details and information";
}

<section class="relative h-[600px] bg-slate-900 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-purple-900/20 to-teal-900/20"></div>
    <div class="absolute top-0 left-0 w-full h-full opacity-30">
        <div class="absolute top-20 left-20 w-32 h-32 bg-purple-500/20 rounded-full blur-xl animate-pulse"></div>
        <div class="absolute top-40 right-32 w-24 h-24 bg-teal-500/20 rounded-full blur-xl animate-pulse" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-32 left-1/3 w-40 h-40 bg-blue-500/20 rounded-full blur-xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    @{
        var imageUrl = !string.IsNullOrEmpty(Model.Event.Image) ? Model.Event.Image : "/placeholder.svg?height=600&width=1200";
        var eventDate = Model.Event.EventDate.ToString("MMMM dd, yyyy");
        var eventTime = Model.Event.EventTime.ToString("h:mm tt");
        var endTime = Model.Event.EventTime.AddHours(4).ToString("h:mm tt");
        var minPrice = Model.Event.Prices?.Where(p => p.IsActive).Min(p => p.Price) ?? 0;
        var maxPrice = Model.Event.Prices?.Where(p => p.IsActive).Max(p => p.Price) ?? 0;
        var priceDisplay = minPrice > 0 ? $"LKR {minPrice}" : "Free";
        var statusBadge = Model.Event.Status == "Published" ? "Available" : "Limited Tickets";
        var ageRestriction = !string.IsNullOrEmpty(Model.Event.AgeRestriction) ? Model.Event.AgeRestriction : "All Ages";
        var totalBookings = Model.Event.Bookings?.Count ?? 0;
        var confirmedBookings = Model.Event.Bookings?.Count(b => b.Status == "Confirmed") ?? 0;
        var availableTickets = Model.Event.TotalCapacity - confirmedBookings;
        var soldOutPercentage = Model.Event.TotalCapacity > 0 ? (confirmedBookings * 100) / Model.Event.TotalCapacity : 0;
        var isSoldOut = availableTickets <= 0;
        var isAlmostSoldOut = soldOutPercentage >= 80;
        var daysUntilEvent = (Model.Event.EventDate - DateTime.UtcNow).Days;
        var hoursUntilEvent = (Model.Event.EventDate - DateTime.UtcNow).TotalHours;
    }
    
    <img src="@imageUrl" alt="@Model.Event.Title" class="w-full h-full object-cover opacity-60">
    <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/60 to-transparent"></div>

    <div class="absolute top-10 right-10 w-20 h-20 bg-white/5 rounded-full backdrop-blur-sm border border-white/10 float-animation"></div>
    <div class="absolute top-32 left-20 w-12 h-12 bg-white/5 rounded-full backdrop-blur-sm border border-white/10 float-animation" style="animation-delay: 1s;"></div>

    <div class="absolute inset-0 flex items-end">
        <div class="container mx-auto px-4 pb-16">
            <div class="max-w-5xl">
                <div class="flex flex-wrap items-center gap-4 mb-8">
                    <span class="bg-gradient-to-r from-purple-500 to-teal-500 text-white px-8 py-3 rounded-full text-sm font-bold backdrop-blur-sm border border-white/20">@Model.Event.Category?.Name</span>
                    @if (isSoldOut)
                    {
                        <span class="bg-red-500/90 text-white px-6 py-3 rounded-full text-sm font-bold animate-pulse backdrop-blur-sm border border-white/20">SOLD OUT</span>
                    }
                    else if (isAlmostSoldOut)
                    {
                        <span class="bg-orange-500/90 text-white px-6 py-3 rounded-full text-sm font-bold animate-pulse backdrop-blur-sm border border-white/20">Almost Sold Out</span>
                    }
                    else
                    {
                        <span class="bg-green-500/90 text-white px-6 py-3 rounded-full text-sm font-bold backdrop-blur-sm border border-white/20">@availableTickets tickets left</span>
                    }
                    <span class="bg-blue-500/90 text-white px-6 py-3 rounded-full text-sm font-bold backdrop-blur-sm border border-white/20">@ageRestriction</span>
                    @if (daysUntilEvent <= 7 && daysUntilEvent > 0)
                    {
                        <span class="bg-yellow-500/90 text-white px-6 py-3 rounded-full text-sm font-bold animate-pulse backdrop-blur-sm border border-white/20">@daysUntilEvent days left</span>
                    }
                </div>
                <h1 class="text-6xl md:text-7xl font-bold text-white mb-8 text-balance leading-tight bg-gradient-to-r from-white via-purple-200 to-teal-200 bg-clip-text text-transparent">@Model.Event.Title</h1>
                @if (!string.IsNullOrEmpty(Model.Event.Description))
                {
                    <p class="text-2xl text-white/90 mb-12 max-w-3xl leading-relaxed">@Model.Event.Description</p>
                }
                else
                {
                    <p class="text-2xl text-white/90 mb-12 max-w-3xl leading-relaxed">No description available for this event.</p>
                }

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-white">
                    <div class="flex items-center gap-4 bg-white/5 backdrop-blur-md rounded-2xl p-6 border border-white/10 hover:bg-white/10 transition-all">
                        <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center text-white font-bold text-xl shadow-lg">
                            📅
                        </div>
                        <div>
                            <div class="font-bold text-lg">@eventDate</div>
                            <div class="text-white/80">@eventTime - @endTime</div>
                        </div>
                    </div>

                    <div class="flex items-center gap-4 bg-white/5 backdrop-blur-md rounded-2xl p-6 border border-white/10 hover:bg-white/10 transition-all">
                        <div class="w-16 h-16 bg-gradient-to-br from-teal-500 to-teal-600 rounded-2xl flex items-center justify-center text-white font-bold text-xl shadow-lg">
                            📍
                        </div>
                        <div>
                            <div class="font-bold text-lg">@Model.Event.Venue?.Name</div>
                            <div class="text-white/80">@Model.Event.Venue?.Location</div>
                        </div>
                    </div>

                    <div class="flex items-center gap-4 bg-white/5 backdrop-blur-md rounded-2xl p-6 border border-white/10 hover:bg-white/10 transition-all">
                        <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center text-white font-bold text-xl shadow-lg">
                            💰
                        </div>
                        <div>
                            <div class="text-4xl font-bold text-green-400">@priceDisplay</div>
                            <div class="text-white/80">Starting from</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-slate-800/50 py-6 border-b border-slate-700">
    <div class="container mx-auto px-4">
        <nav class="flex items-center space-x-2 text-sm">
            <a href="/" class="text-slate-400 hover:text-purple-400 transition-colors">Home</a>
            <svg class="w-4 h-4 text-slate-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
