                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        About This Event
                    </h2>
                    <div class="prose prose-lg max-w-none text-slate-300">
                        @if (!string.IsNullOrEmpty(Model.Event.Description))
                        {
                            <p class="text-xl leading-relaxed mb-8 text-slate-200">
                                @Model.Event.Description
                            </p>
                        }
                        else
                        {
                            <p class="text-xl leading-relaxed mb-8 text-slate-200">
                                No detailed description available for this event. Please contact the organizer for more information.
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Event.Tags))
                        {
                            <div class="flex flex-wrap gap-2 mb-8">
                                @foreach (var tag in Model.Event.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="bg-purple-500/20 text-purple-300 px-3 py-1 rounded-full text-sm font-medium">#@tag.Trim()</span>
                                }
                            </div>
                        }
                        @if (Model.Event.IsMultiDay)
                        {
                            <p class="leading-relaxed mb-8 text-slate-300">
                                <strong>Multi-day Event:</strong> This event spans multiple days, offering you the opportunity to experience everything at your own pace.
                            </p>
                        }
                    </div>
                </div>

                <!-- Organizer Information Section -->
