    <!-- Mobile Overlay for Sidebar -->
    <div id="org-overlay" class="fixed inset-0 bg-black/50 z-20 hidden md:hidden" aria-hidden="true"></div>

    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Global chart variables
        let revenueChart, ticketChart;

        // Sidebar toggling hooks
        function toggleOrganizerSidebar() {
            const sidebar = document.getElementById('org-sidebar');
            const overlay = document.getElementById('org-overlay');
            sidebar.classList.toggle('-translate-x-full');
            overlay.classList.toggle('hidden');
            if (!sidebar.classList.contains('-translate-x-full')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = '';
            }
        }
        
        // Close on escape
        document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
                const sidebar = document.getElementById('org-sidebar');
                const dropdown = document.getElementById('exportDropdown');
                if (!sidebar.classList.contains('-translate-x-full')) {
                    toggleOrganizerSidebar();
                }
                if (!dropdown.classList.contains('hidden')) {
                    toggleExportDropdown();
                }
            }
        });

        // Export dropdown functionality
        function toggleExportDropdown() {
            const dropdown = document.getElementById('exportDropdown');
            dropdown.classList.toggle('hidden');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('exportDropdown');
            const dropdownBtn = document.getElementById('exportDropdownBtn');
            if (!dropdown.contains(event.target) && !dropdownBtn.contains(event.target)) {
                dropdown.classList.add('hidden');
            }
        });

        // Export functionality
        function exportReport(format) {
            const dropdown = document.getElementById('exportDropdown');
            dropdown.classList.add('hidden');
            
            // Show loading state
            const button = event.target.closest('button');
            const originalText = button.innerHTML;
            button.innerHTML = '<svg class="animate-spin w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Exporting...';
            button.disabled = true;
            
            // Simulate export process
            setTimeout(() => {
                button.innerHTML = originalText;
                button.disabled = false;
                
                // Show success message
                showNotification(`Report exported as ${format.toUpperCase()} successfully!`, 'success');
                
                // In a real application, this would trigger the actual download
                console.log(`Exporting report as ${format}`);
            }, 2000);
        }

        // Notification system
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 z-50 px-6 py-4 rounded-xl shadow-lg backdrop-blur-xl border transition-all duration-300 transform translate-x-full ${
                type === 'success' ? 'bg-green-500/20 border-green-500/30 text-green-400' :
                type === 'error' ? 'bg-red-500/20 border-red-500/30 text-red-400' :
                'bg-blue-500/20 border-blue-500/30 text-blue-400'
            }`;
            notification.innerHTML = `
                <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>${message}</span>
                </div>
            `;
            document.body.appendChild(notification);
            
            // Animate in
            setTimeout(() => {
                notification.classList.remove('translate-x-full');
            }, 100);
            
            // Remove after 3 seconds
            setTimeout(() => {
                notification.classList.add('translate-x-full');
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }

        // Chart initialization
        document.addEventListener('DOMContentLoaded', function() {
            // Export dropdown event listener
            document.getElementById('exportDropdownBtn').addEventListener('click', toggleExportDropdown);
            
            // Initialize charts
            initRevenueChart();
            initTicketChart();
        });

        // Revenue Chart
        function initRevenueChart() {
            const ctx = document.getElementById('revenueChart').getContext('2d');
            revenueChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Revenue ($)',
                        data: [3200, 4500, 2800, 5200, 4800, 6100, 4200],
                        borderColor: 'rgb(168, 85, 247)',
                        backgroundColor: 'rgba(168, 85, 247, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: 'rgb(168, 85, 247)',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)',
                                borderColor: 'rgba(255, 255, 255, 0.2)'
                            },
                            ticks: {
                                color: '#9CA3AF'
                            }
                        },
                        y: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)',
                                borderColor: 'rgba(255, 255, 255, 0.2)'
                            },
                            ticks: {
                                color: '#9CA3AF',
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        }
                    },
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    }
                }
            });
        }

        // Ticket Sales Chart
        function initTicketChart() {
            const ctx = document.getElementById('ticketChart').getContext('2d');
            ticketChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Tickets Sold',
                        data: [45, 67, 32, 89, 76, 124, 98],
                        backgroundColor: 'rgba(20, 184, 166, 0.8)',
                        borderColor: 'rgb(20, 184, 166)',
                        borderWidth: 2,
                        borderRadius: 8,
                        borderSkipped: false,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)',
                                borderColor: 'rgba(255, 255, 255, 0.2)'
                            },
                            ticks: {
                                color: '#9CA3AF'
                            }
                        },
                        y: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)',
                                borderColor: 'rgba(255, 255, 255, 0.2)'
                            },
                            ticks: {
                                color: '#9CA3AF'
                            }
                        }
                    },
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    }
                }
            });
        }

        // Update Revenue Chart
        function updateRevenueChart(period) {
            // Update button states
            document.querySelectorAll('[onclick*="updateRevenueChart"]').forEach(btn => {
                btn.classList.remove('bg-gradient-to-r', 'from-purple-500', 'to-teal-500');
                btn.classList.add('bg-white/10', 'text-gray-300');
            });
            event.target.classList.remove('bg-white/10', 'text-gray-300');
            event.target.classList.add('bg-gradient-to-r', 'from-purple-500', 'to-teal-500');

            // Sample data for different periods
            const dataSets = {
                '7d': {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    data: [3200, 4500, 2800, 5200, 4800, 6100, 4200]
                },
                '30d': {
                    labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                    data: [18500, 22100, 19800, 25600]
                },
                '90d': {
                    labels: ['Month 1', 'Month 2', 'Month 3'],
                    data: [86000, 94500, 102300]
                }
            };

            revenueChart.data.labels = dataSets[period].labels;
            revenueChart.data.datasets[0].data = dataSets[period].data;
            revenueChart.update();
        }

        // Update Ticket Chart
        function updateTicketChart(type) {
            // Update button states
            document.querySelectorAll('[onclick*="updateTicketChart"]').forEach(btn => {
                btn.classList.remove('bg-gradient-to-r', 'from-purple-500', 'to-teal-500');
                btn.classList.add('bg-white/10', 'text-gray-300');
            });
            event.target.classList.remove('bg-white/10', 'text-gray-300');
            event.target.classList.add('bg-gradient-to-r', 'from-purple-500', 'to-teal-500');

            // Sample data for different types
            const dataSets = {
                'daily': {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    data: [45, 67, 32, 89, 76, 124, 98]
                },
                'weekly': {
                    labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                    data: [420, 580, 390, 650]
                }
            };

            ticketChart.data.labels = dataSets[type].labels;
            ticketChart.data.datasets[0].data = dataSets[type].data;
            ticketChart.update();
        }
    </script>
