@model List<online_event_booking_system.Data.Entities.Event>

@{
    ViewData["Title"] = "Browse Events";
    Layout = "_Layout";
}

<div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    <!-- Header -->
    <div class="bg-white/5 backdrop-blur-xl border-b border-white/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
                <div>
                    <h1 class="text-3xl font-bold text-white mb-2">Discover Events</h1>
                    <p class="text-gray-300">Find and book amazing events near you</p>
                </div>
                
                <!-- Search and Filter -->
                <div class="flex flex-col sm:flex-row gap-4 w-full lg:w-auto">
                    <form method="get" class="flex-1 lg:flex-none">
                        <div class="relative">
                            <input type="text" name="search" value="@ViewBag.SearchTerm" 
                                   placeholder="Search events, venues, or categories..." 
                                   class="w-full lg:w-80 px-4 py-3 pl-12 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                    </form>
                    
                    <form method="get" class="lg:w-auto">
                        <select name="category" onchange="this.form.submit()" 
                                class="px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <option value="">All Categories</option>
                            @if (ViewBag.Categories != null)
                            {
                                @foreach (var cat in (List<online_event_booking_system.Data.Entities.Category>)ViewBag.Categories)
                                {
                                    <option value="@cat.Id" selected="@(ViewBag.SelectedCategory == cat.Id.ToString())">@cat.Name</option>
                                }
                            }
                        </select>
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                        {
                            <input type="hidden" name="search" value="@ViewBag.SearchTerm" />
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Events Grid -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @if (Model != null && Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var eventItem in Model)
                {
                    <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl overflow-hidden hover:bg-white/10 transition-all duration-300 transform hover:scale-105">
                        <!-- Event Image -->
                        <div class="relative h-48 bg-gradient-to-br from-purple-500 to-pink-500">
                            @if (!string.IsNullOrEmpty(eventItem.Image))
                            {
                                <img src="@eventItem.Image" alt="@eventItem.Title" class="w-full h-full object-cover">
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center">
                                    <svg class="w-16 h-16 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                            }
                            
                            <!-- Category Badge -->
                            <div class="absolute top-4 left-4">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-600/80 text-white backdrop-blur-sm">
                                    @eventItem.Category?.Name
                                </span>
                            </div>
                            
                            <!-- Price Badge -->
                            @if (eventItem.Prices?.Any() == true)
                            {
                                var minPrice = eventItem.Prices.Min(p => p.Price);
                                <div class="absolute top-4 right-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-600/80 text-white backdrop-blur-sm">
                                        From LKR @minPrice.ToString("F2")
                                    </span>
                                </div>
                            }
                        </div>
                        
                        <!-- Event Details -->
                        <div class="p-6">
                            <div class="mb-4">
                                <h3 class="text-xl font-bold text-white mb-2 line-clamp-2">@eventItem.Title</h3>
                                <p class="text-gray-300 text-sm line-clamp-3">@eventItem.Description</p>
                            </div>
                            
                            <!-- Event Info -->
                            <div class="space-y-3 mb-6">
                                <div class="flex items-center text-sm text-gray-400">
                                    <svg class="w-4 h-4 mr-3 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <span>@eventItem.EventDate.ToString("MMM dd, yyyy")</span>
                                </div>
                                
                                <div class="flex items-center text-sm text-gray-400">
                                    <svg class="w-4 h-4 mr-3 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <span>@eventItem.EventTime.ToString("h:mm tt")</span>
                                </div>
                                
                                <div class="flex items-center text-sm text-gray-400">
                                    <svg class="w-4 h-4 mr-3 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <span>@(eventItem.Venue?.Name ?? "Venue TBD")</span>
                                </div>
                                
                                <div class="flex items-center text-sm text-gray-400">
                                    <svg class="w-4 h-4 mr-3 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                    </svg>
                                    <span>@(eventItem.Organizer?.FullName ?? "Organizer")</span>
                                </div>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="flex gap-3">
                                <a href="/events/@eventItem.Id" 
                                   class="flex-1 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-semibold py-3 px-4 rounded-xl text-center hover:from-purple-700 hover:to-pink-700 transition-all duration-300 transform hover:scale-105">
                                    View Details
                                </a>
                                <button onclick="addToFavorites('@eventItem.Id')" 
                                        class="px-4 py-3 bg-white/10 border border-white/20 text-white rounded-xl hover:bg-white/20 transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-16">
                <div class="max-w-md mx-auto">
                    <svg class="w-24 h-24 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                    <h3 class="text-2xl font-bold text-white mb-4">No Events Found</h3>
                    <p class="text-gray-400 mb-6">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                        {
                            <span>No events match your search for "<span class="text-purple-400">@ViewBag.SearchTerm</span>"</span>
                        }
                        else
                        {
                            <span>There are no events available at the moment.</span>
                        }
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || !string.IsNullOrEmpty(ViewBag.SelectedCategory as string))
                        {
                            <a href="/customer/events" class="inline-flex items-center px-6 py-3 bg-purple-600 text-white rounded-xl hover:bg-purple-700 transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                </svg>
                                Clear Filters
                            </a>
                        }
                        <a href="/events" class="inline-flex items-center px-6 py-3 bg-white/10 border border-white/20 text-white rounded-xl hover:bg-white/20 transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Browse All Events
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function addToFavorites(eventId) {
        // TODO: Implement favorites functionality
        alert('Favorites feature coming soon!');
    }
    
    // Auto-submit search form on input
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.querySelector('input[name="search"]');
        if (searchInput) {
            let timeout;
            searchInput.addEventListener('input', function() {
                clearTimeout(timeout);
                timeout = setTimeout(() => {
                    this.form.submit();
                }, 500);
            });
        }
    });
</script>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>