@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "_DashboardLayout";
}

<!-- Customer Dashboard Container -->
<div class="min-h-screen bg-dark-navy text-white pt-20">
        <!-- Main Content -->
    <div class="p-4 md:p-6">
            <!-- Page Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-teal-400 text-transparent bg-clip-text mb-2">Customer Dashboard</h1>
                <p class="text-gray-400">Welcome back! Discover amazing events and manage your bookings</p>
            </div>

            <!-- Quick Stats -->
            <section aria-label="Quick Stats" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mb-8">
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 bg-blue-500/20 rounded-xl">
                            <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                            </svg>
                        </div>
                    </div>
                    <p class="text-gray-400 text-sm">Total Bookings</p>
                    <p class="text-3xl font-bold mt-2">@ViewBag.TotalBookings</p>
                    <p class="text-gray-400 text-xs mt-1">All time</p>
                </div>
                
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 bg-green-500/20 rounded-xl">
                            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <p class="text-gray-400 text-sm">Upcoming Events</p>
                    <p class="text-3xl font-bold mt-2">@ViewBag.UpcomingEvents</p>
                    <p class="text-gray-400 text-xs mt-1">Confirmed bookings</p>
                </div>
                
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 bg-purple-500/20 rounded-xl">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                            </svg>
                        </div>
                    </div>
                    <p class="text-gray-400 text-sm">Total Spent</p>
                    <p class="text-3xl font-bold mt-2">LKR @ViewBag.TotalSpent.ToString("F2")</p>
                    <p class="text-gray-400 text-xs mt-1">All time</p>
                </div>
                
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 bg-teal-500/20 rounded-xl">
                            <svg class="w-6 h-6 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <p class="text-gray-400 text-sm">Favorite Categories</p>
                    <p class="text-3xl font-bold mt-2">5</p>
                    <p class="text-gray-400 text-xs mt-1">Music, Sports, Tech</p>
                </div>
            </section>

            <!-- Upcoming Events -->
            <section aria-label="Upcoming Events" class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 mb-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold">Upcoming Events</h2>
                    <a asp-controller="Customer" asp-action="Events" class="text-purple-400 hover:text-purple-300 text-sm font-medium">View All</a>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @if (ViewBag.RecentBookings != null && ((List<online_event_booking_system.Data.Entities.Booking>)ViewBag.RecentBookings).Any())
                    {
                        @foreach (var booking in (List<online_event_booking_system.Data.Entities.Booking>)ViewBag.RecentBookings)
                        {
                            <div class="bg-white/5 border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 group">
                                <div class="h-32 relative">
                                    @if (!string.IsNullOrEmpty(booking.Event.Image))
                                    {
                                        <img src="@booking.Event.Image" alt="@booking.Event.Title" class="w-full h-full object-cover" loading="lazy" decoding="async" />
                                        <div class="absolute inset-0 bg-black/40"></div>
                                    }
                                    else
                                    {
                                        <div class="w-full h-full bg-gradient-to-br from-purple-500/20 to-teal-500/20"></div>
                                    }
                                    <div class="absolute top-3 right-3">
                                        <span class="px-2 py-1 @(booking.Status == "Confirmed" ? "bg-green-500/20 text-green-400" : booking.Status == "Pending" ? "bg-yellow-500/20 text-yellow-400" : "bg-red-500/20 text-red-400") rounded-full text-xs font-medium">@booking.Status</span>
                                    </div>
                                </div>
                                <div class="p-4">
                                    <h3 class="text-white font-bold text-lg mb-1">@booking.Event.Title</h3>
                                    <p class="text-gray-300 text-sm mb-2">@booking.Event.EventDate.ToString("MMM dd, yyyy") • @(booking.Event.Venue?.Name ?? "Venue not specified")</p>
                                    <div class="flex items-center justify-between">
                                        <span class="text-purple-400 font-semibold">@booking.Tickets.Sum(t => t.EventPrice?.Price ?? 0).ToString("F2")</span>
                                        <a asp-controller="Customer" asp-action="OrderDetails" asp-route-id="@booking.Id" class="text-blue-400 hover:text-blue-300 text-sm font-medium">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-span-full text-center py-8">
                            <svg class="w-16 h-16 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                            </svg>
                            <h3 class="text-lg font-semibold text-white mb-2">No recent bookings</h3>
                            <p class="text-gray-400 mb-4">Start exploring events to see your bookings here</p>
                            <a asp-controller="Customer" asp-action="Events" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-purple-500 to-teal-500 text-white rounded-lg font-semibold hover:from-purple-600 hover:to-teal-600 transition-all">
                                Browse Events
                            </a>
                        </div>
                    }
                </div>
            </section>

            <!-- Payment History -->
            <section aria-label="Recent Payments" class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 mb-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold">Recent Payments</h2>
                    <a asp-controller="Customer" asp-action="Bookings" class="text-purple-400 hover:text-purple-300 text-sm font-medium">View All</a>
                </div>
                @if (ViewBag.RecentPayments != null && ((List<online_event_booking_system.Data.Entities.Payment>)ViewBag.RecentPayments).Any())
                {
                    <div class="space-y-3">
                        @foreach (var payment in (List<online_event_booking_system.Data.Entities.Payment>)ViewBag.RecentPayments)
                        {
                            <div class="bg-white/5 border border-white/10 rounded-lg p-4 hover:bg-white/10 transition-colors">
                                <div class="flex items-center justify-between">
                                    <div class="flex-1">
                                        <div class="flex items-center justify-between mb-1">
                                            <h4 class="font-medium text-white">@(payment.Notes ?? "Payment for event booking")</h4>
                                            <span class="text-lg font-semibold text-white">@payment.Currency @payment.Amount.ToString("F2")</span>
                                        </div>
                                        <div class="flex items-center space-x-4 text-sm text-gray-400">
                                            <span>@payment.PaidAt.ToString("MMM dd, yyyy")</span>
                                            <span>•</span>
                                            <span>@payment.PaymentMethod</span>
                                            <span>•</span>
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium @(payment.Status == "Completed" ? "bg-green-500/20 text-green-400 border border-green-500/30" : payment.Status == "Pending" ? "bg-yellow-500/20 text-yellow-400 border border-yellow-500/30" : payment.Status == "Failed" ? "bg-red-500/20 text-red-400 border border-red-500/30" : "bg-gray-500/20 text-gray-400 border border-gray-500/30")">
                                                @payment.Status
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                        <h3 class="text-lg font-semibold text-white mb-2">No payment history</h3>
                        <p class="text-gray-400 mb-4">Your payment history will appear here once you make bookings</p>
                        <a href="/events" class="inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Browse Events
                        </a>
                    </div>
                }
            </section>

            <!-- Quick Actions -->
            <section aria-label="Quick Actions" class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6">
                <h2 class="text-xl font-bold mb-6">Quick Actions</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <a asp-controller="Customer" asp-action="Events" class="bg-gradient-to-r from-purple-500 to-teal-500 text-white px-6 py-4 rounded-xl font-semibold hover:from-purple-600 hover:to-teal-600 transition-all transform hover:scale-105 text-center">
                        <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        Browse Events
                    </a>
                    
                    <a asp-controller="Customer" asp-action="Bookings" class="bg-white/10 border border-white/20 text-white px-6 py-4 rounded-xl hover:bg-white/20 transition-all duration-200 text-center">
                        <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                        </svg>
                        My Bookings
                    </a>
                    
                    <a asp-controller="Customer" asp-action="Profile" class="bg-white/10 border border-white/20 text-white px-6 py-4 rounded-xl hover:bg-white/20 transition-all duration-200 text-center">
                        <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Edit Profile
                    </a>
                    
                    <a asp-controller="Customer" asp-action="Loyalty" class="bg-white/10 border border-white/20 text-white px-6 py-4 rounded-xl hover:bg-white/20 transition-all duration-200 text-center">
                        <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                        </svg>
                        Loyalty Points
                    </a>
                    
                    <a asp-controller="Customer" asp-action="Support" class="bg-white/10 border border-white/20 text-white px-6 py-4 rounded-xl hover:bg-white/20 transition-all duration-200 text-center">
                        <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                        </svg>
                        Get Support
                    </a>
                </div>
            </section>
    </div>
    </div>
