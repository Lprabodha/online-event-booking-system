@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "_DashboardLayout";
}

<!-- Customer Dashboard Container -->
<div class="min-h-screen bg-dark-navy text-white">
    <div class="flex">
        <!-- Sidebar Navigation (collapsible on mobile) -->
        <aside id="customer-sidebar" class="w-64 bg-dark-navy/50 backdrop-blur-xl border-r border-purple-500/30 min-h-screen fixed lg:relative z-30 transform -translate-x-full lg:translate-x-0 transition-transform duration-300">
            <nav class="p-6">
                <ul class="space-y-2">
                    <!-- Dashboard -->
                    <li>
                        <a asp-controller="Customer" asp-action="Index" class="flex items-center space-x-3 px-4 py-3 rounded-xl bg-gradient-to-r from-purple-500/20 to-teal-500/20 border border-purple-500/30 text-white font-semibold transition-all duration-200">
                            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
                            </svg>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <!-- My Events -->
                    <li>
                        <a asp-controller="Customer" asp-action="Events" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span>Browse Events</span>
                        </a>
                    </li>
                    <!-- My Bookings -->
                    <li>
                        <a asp-controller="Customer" asp-action="Bookings" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                            </svg>
                            <span>My Bookings</span>
                        </a>
                    </li>
                    <!-- Profile -->
                    <li>
                        <a asp-controller="Customer" asp-action="Profile" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span>Profile</span>
                        </a>
                    </li>
                    <!-- Support -->
                    <li>
                        <a asp-controller="Customer" asp-action="Support" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                            </svg>
                            <span>Support</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-4 lg:p-6">
            <!-- Mobile Menu Button -->
            <button onclick="toggleCustomerSidebar()" class="lg:hidden fixed top-20 left-4 z-40 p-2 bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl text-white hover:bg-white/20 transition-all">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
            <!-- Page Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-teal-400 text-transparent bg-clip-text mb-2">Customer Dashboard</h1>
                <p class="text-gray-400">Welcome back! Discover amazing events and manage your bookings</p>
            </div>

            <!-- Quick Stats -->
            <section aria-label="Quick Stats" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mb-8">
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 bg-blue-500/20 rounded-xl">
                            <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                            </svg>
                        </div>
                    </div>
                    <p class="text-gray-400 text-sm">Total Bookings</p>
                    <p class="text-3xl font-bold mt-2">12</p>
                    <p class="text-gray-400 text-xs mt-1">This year</p>
                </div>
                
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 bg-green-500/20 rounded-xl">
                            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <p class="text-gray-400 text-sm">Upcoming Events</p>
                    <p class="text-3xl font-bold mt-2">3</p>
                    <p class="text-gray-400 text-xs mt-1">Next 30 days</p>
                </div>
                
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 bg-purple-500/20 rounded-xl">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                            </svg>
                        </div>
                    </div>
                    <p class="text-gray-400 text-sm">Total Spent</p>
                    <p class="text-3xl font-bold mt-2">$450</p>
                    <p class="text-gray-400 text-xs mt-1">This year</p>
                </div>
                
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition">
                    <div class="flex items-center justify-between mb-4">
                        <div class="p-3 bg-teal-500/20 rounded-xl">
                            <svg class="w-6 h-6 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <p class="text-gray-400 text-sm">Favorite Categories</p>
                    <p class="text-3xl font-bold mt-2">5</p>
                    <p class="text-gray-400 text-xs mt-1">Music, Sports, Tech</p>
                </div>
            </section>

            <!-- Upcoming Events -->
            <section aria-label="Upcoming Events" class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 mb-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold">Upcoming Events</h2>
                    <a asp-controller="Customer" asp-action="Events" class="text-purple-400 hover:text-purple-300 text-sm font-medium">View All</a>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @for (var i = 0; i < 3; i++)
                    {
                        var events = new[] { "Summer Music Festival", "Tech Conference 2024", "Art Exhibition" };
                        var dates = new[] { "Dec 15, 2024", "Dec 20, 2024", "Dec 25, 2024" };
                        var venues = new[] { "Concert Hall", "Expo Center", "Gallery" };
                        var prices = new[] { "$25", "$50", "$15" };
                        
                        <div class="bg-white/5 border border-white/10 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300 group">
                            <div class="h-32 bg-gradient-to-br from-purple-500/20 to-teal-500/20 relative">
                                <div class="absolute top-3 right-3">
                                    <span class="px-2 py-1 bg-green-500/20 text-green-400 rounded-full text-xs font-medium">Booked</span>
                                </div>
                            </div>
                            <div class="p-4">
                                <h3 class="text-white font-bold text-lg mb-1">@events[i]</h3>
                                <p class="text-gray-300 text-sm mb-2">@dates[i] • @venues[i]</p>
                                <div class="flex items-center justify-between">
                                    <span class="text-purple-400 font-semibold">@prices[i]</span>
                                    <button class="text-blue-400 hover:text-blue-300 text-sm font-medium">
                                        View Details
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>

            <!-- Quick Actions -->
            <section aria-label="Quick Actions" class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6">
                <h2 class="text-xl font-bold mb-6">Quick Actions</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <a asp-controller="Customer" asp-action="Events" class="bg-gradient-to-r from-purple-500 to-teal-500 text-white px-6 py-4 rounded-xl font-semibold hover:from-purple-600 hover:to-teal-600 transition-all transform hover:scale-105 text-center">
                        <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        Browse Events
                    </a>
                    
                    <a asp-controller="Customer" asp-action="Bookings" class="bg-white/10 border border-white/20 text-white px-6 py-4 rounded-xl hover:bg-white/20 transition-all duration-200 text-center">
                        <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                        </svg>
                        My Bookings
                    </a>
                    
                    <a asp-controller="Customer" asp-action="Profile" class="bg-white/10 border border-white/20 text-white px-6 py-4 rounded-xl hover:bg-white/20 transition-all duration-200 text-center">
                        <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Edit Profile
                    </a>
                    
                    <a asp-controller="Customer" asp-action="Support" class="bg-white/10 border border-white/20 text-white px-6 py-4 rounded-xl hover:bg-white/20 transition-all duration-200 text-center">
                        <svg class="w-6 h-6 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                        </svg>
                        Get Support
                    </a>
                </div>
            </section>
        </main>
    </div>

    <!-- Mobile Overlay for Sidebar -->
    <div id="customer-overlay" class="fixed inset-0 bg-black/50 z-20 hidden lg:hidden" aria-hidden="true"></div>

    <script>
        // Sidebar toggling hooks
        function toggleCustomerSidebar() {
            const sidebar = document.getElementById('customer-sidebar');
            const overlay = document.getElementById('customer-overlay');
            sidebar.classList.toggle('-translate-x-full');
            overlay.classList.toggle('hidden');
            if (!sidebar.classList.contains('-translate-x-full')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = '';
            }
        }
        
        // Close on escape
        document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
                const sidebar = document.getElementById('customer-sidebar');
                if (!sidebar.classList.contains('-translate-x-full')) {
                    toggleCustomerSidebar();
                }
            }
        });

        // Handle window resize
        window.addEventListener('resize', function() {
            const sidebar = document.getElementById('customer-sidebar');
            const overlay = document.getElementById('customer-overlay');
            
            if (window.innerWidth >= 1024) {
                sidebar.classList.remove('-translate-x-full');
                overlay.classList.add('hidden');
                document.body.style.overflow = '';
            }
        });
    </script>
</div>