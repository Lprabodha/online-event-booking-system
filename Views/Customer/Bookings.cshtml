                <!-- Sample Booking 3 - Cancelled -->
                <div class="booking-item bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-4 lg:p-6" data-status="cancelled">
                    <!-- Header Section -->
                    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                        <div class="flex-1 mb-4 sm:mb-0">
