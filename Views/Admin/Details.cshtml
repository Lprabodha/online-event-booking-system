@model online_event_booking_system.Data.Entities.ApplicationUser
@{
    ViewData["Title"] = "User Details";
    Layout = "_Layout";
}

<!-- User Details Container -->
<div class="min-h-screen bg-dark-navy text-white">
    <div class="flex">
        <!-- Sidebar Navigation -->
        <aside id="sidebar" class="w-64 bg-dark-navy/50 backdrop-blur-xl border-r border-purple-500/30 min-h-screen fixed md:relative z-30 transform -translate-x-full md:translate-x-0 transition-transform duration-300">
            <nav class="p-6">
                <ul class="space-y-2">
                    <!-- Dashboard -->
                    <li>
                        <a asp-controller="Admin" asp-action="Index" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
                            </svg>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    
                    <!-- Users Management -->
                    <li>
                        <a asp-controller="Admin" asp-action="Index" class="flex items-center space-x-3 px-4 py-3 rounded-xl bg-gradient-to-r from-purple-500/20 to-teal-500/20 border border-purple-500/30 text-white font-semibold transition-all duration-200">
                            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                            </svg>
                            <span>Users</span>
                        </a>
                    </li>
                    
                    <!-- Events -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span>Events</span>
                        </a>
                    </li>
                    
                    <!-- Venues -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            <span>Venues</span>
                        </a>
                    </li>
                    
                    <!-- Reports -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                            <span>Reports</span>
                        </a>
                    </li>
                    
                    <!-- Settings -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <!-- Page Header -->
            <div class="mb-8">
                <nav class="flex items-center space-x-2 text-sm text-gray-400 mb-4" aria-label="Breadcrumb">
                    <a asp-controller="Admin" asp-action="Index" class="hover:text-white transition-colors">Dashboard</a>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <span class="text-white">User Details</span>
                </nav>
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-teal-400 text-transparent bg-clip-text mb-2">User Details</h1>
                        <p class="text-gray-400">View detailed information about this user.</p>
                    </div>
                    <div class="flex space-x-3">
                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.Id" class="bg-gradient-to-r from-blue-500 to-cyan-500 text-white px-4 py-2 rounded-xl font-bold text-sm hover:from-blue-600 hover:to-cyan-600 transition-all transform hover:scale-105 shadow-lg">
                            Edit User
                        </a>
                        <a asp-controller="Admin" asp-action="Index" class="px-4 py-2 rounded-xl text-sm font-semibold text-gray-300 border border-white/20 hover:bg-white/10 transition">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>

            <!-- User Details Card -->
            <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 max-w-4xl">
                <!-- User Header -->
                <div class="flex items-center space-x-4 mb-6 pb-6 border-b border-white/10">
                    <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-teal-500 rounded-full flex items-center justify-center">
                        <span class="text-white text-xl font-bold">@(string.IsNullOrEmpty(Model.FullName) ? Model.UserName?.Substring(0, 1).ToUpper() : Model.FullName.Substring(0, 1).ToUpper())</span>
                    </div>
                    <div>
                        <h2 class="text-2xl font-bold text-white">@(string.IsNullOrEmpty(Model.FullName) ? Model.UserName : Model.FullName)</h2>
                        <p class="text-gray-400">@Model.UserName</p>
                        <div class="flex items-center space-x-2 mt-2">
                            <span class="px-3 py-1 rounded-full text-xs font-medium @(Model.IsActive ? "bg-green-500/20 text-green-400" : "bg-red-500/20 text-red-400")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-purple-500/20 text-purple-400">
                                @(Model.EmailConfirmed ? "Email Verified" : "Email Not Verified")
                            </span>
                        </div>
                    </div>
                </div>

                <!-- User Information Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Basic Information -->
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold text-white border-b border-white/10 pb-2">Basic Information</h3>
                        
                        <div>
                            <span class="text-gray-400 text-sm">Full Name</span>
                            <p class="text-white font-medium">@(string.IsNullOrEmpty(Model.FullName) ? "Not provided" : Model.FullName)</p>
                        </div>
                        
                        <div>
                            <span class="text-gray-400 text-sm">Username</span>
                            <p class="text-white font-medium">@Model.UserName</p>
                        </div>
                        
                        <div>
                            <span class="text-gray-400 text-sm">Email Address</span>
                            <p class="text-white font-medium">@Model.Email</p>
                        </div>
                        
                        <div>
                            <span class="text-gray-400 text-sm">Contact Number</span>
                            <p class="text-white font-medium">@(string.IsNullOrEmpty(Model.ContactNumber) ? "Not provided" : Model.ContactNumber)</p>
                        </div>
                        
                        <div>
                            <span class="text-gray-400 text-sm">NIC Number</span>
                            <p class="text-white font-medium">@(string.IsNullOrEmpty(Model.NIC) ? "Not provided" : Model.NIC)</p>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold text-white border-b border-white/10 pb-2">Additional Information</h3>
                        
                        <div>
                            <span class="text-gray-400 text-sm">Organization</span>
                            <p class="text-white font-medium">@(string.IsNullOrEmpty(Model.OrganizationName) ? "Not provided" : Model.OrganizationName)</p>
                        </div>
                        
                        <div>
                            <span class="text-gray-400 text-sm">Address</span>
                            <p class="text-white font-medium">@(string.IsNullOrEmpty(Model.Address) ? "Not provided" : Model.Address)</p>
                        </div>
                        
                        <div>
                            <span class="text-gray-400 text-sm">Stripe Customer ID</span>
                            <p class="text-white font-medium">@(string.IsNullOrEmpty(Model.StripeCustomerId) ? "Not provided" : Model.StripeCustomerId)</p>
                        </div>
                        
                        <div>
                            <span class="text-gray-400 text-sm">Account Status</span>
                            <p class="text-white font-medium">@(Model.IsActive ? "Active" : "Inactive")</p>
                        </div>
                    </div>
                </div>

                <!-- Account Information -->
                <div class="mt-8 pt-6 border-t border-white/10">
                    <h3 class="text-lg font-semibold text-white mb-4">Account Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="bg-white/5 rounded-xl p-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-gradient-to-r from-purple-500 to-teal-500 rounded-lg flex items-center justify-center">
                                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-gray-400 text-sm">User ID</p>
                                    <p class="text-white font-medium text-sm">@Model.Id</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-white/5 rounded-xl p-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-gradient-to-r from-green-500 to-emerald-500 rounded-lg flex items-center justify-center">
                                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-white/5 rounded-xl p-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-lg flex items-center justify-center">
                                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-gray-400 text-sm">Last Login</p>
                                    <p class="text-white font-medium text-sm">@(Model.LastLogin?.ToString("MMM dd, yyyy HH:mm") ?? "Never")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Activity -->
                <div class="mt-8 pt-6 border-t border-white/10">
                    <h3 class="text-lg font-semibold text-white mb-4">User Activity</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-white/5 rounded-xl p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-gray-400 text-sm">Tickets Purchased</span>
                                <span class="text-white font-bold">@Model.Tickets.Count</span>
                            </div>
                            <div class="w-full bg-white/10 rounded-full h-2">
                                <div class="bg-gradient-to-r from-purple-500 to-teal-500 h-2 rounded-full" style="width: @(Model.Tickets.Count > 0 ? Math.Min(Model.Tickets.Count * 10, 100) : 0)%"></div>
                            </div>
                        </div>
                        
                        <div class="bg-white/5 rounded-xl p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-gray-400 text-sm">Payments Made</span>
                                <span class="text-white font-bold">@Model.Payments.Count</span>
                            </div>
                            <div class="w-full bg-white/10 rounded-full h-2">
                                <div class="bg-gradient-to-r from-green-500 to-emerald-500 h-2 rounded-full" style="width: @(Model.Payments.Count > 0 ? Math.Min(Model.Payments.Count * 10, 100) : 0)%"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-8 pt-6 border-t border-white/10 flex items-center justify-between">
                    <div class="flex space-x-3">
                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.Id" class="bg-gradient-to-r from-blue-500 to-cyan-500 text-white px-6 py-3 rounded-xl font-bold hover:from-blue-600 hover:to-cyan-600 transition-all transform hover:scale-105 shadow-lg">
                            Edit User
                        </a>
                        <form asp-controller="Admin" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <button type="submit" class="bg-gradient-to-r from-red-500 to-pink-500 text-white px-6 py-3 rounded-xl font-bold hover:from-red-600 hover:to-pink-600 transition-all transform hover:scale-105 shadow-lg">
                                Delete User
                            </button>
                        </form>
                    </div>
                    <a asp-controller="Admin" asp-action="Index" class="px-6 py-3 rounded-xl text-sm font-semibold text-gray-300 border border-white/20 hover:bg-white/10 transition">
                        Back to List
                    </a>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Mobile Overlay -->
<div id="mobile-overlay" class="fixed inset-0 bg-black/50 z-20 hidden md:hidden" onclick="toggleSidebar()"></div>

<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('mobile-overlay');
        
        sidebar.classList.toggle('-translate-x-full');
        overlay.classList.toggle('hidden');
        
        if (!sidebar.classList.contains('-translate-x-full')) {
            document.body.style.overflow = 'hidden';
        } else {
            document.body.style.overflow = '';
        }
    }
    
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            const sidebar = document.getElementById('sidebar');
            if (!sidebar.classList.contains('-translate-x-full')) {
                toggleSidebar();
            }
        }
    });
    
    window.addEventListener('resize', function() {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('mobile-overlay');
        
        if (window.innerWidth >= 768) {
            sidebar.classList.remove('-translate-x-full');
            overlay.classList.add('hidden');
            document.body.style.overflow = '';
        }
    });
</script>
