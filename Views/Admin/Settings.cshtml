@{
    ViewData["Title"] = "Admin Settings";
    Layout = "_Layout";
}

<!-- Admin Settings Page -->
<div class="min-h-screen bg-dark-navy text-white">
    <div class="flex">
        <!-- Sidebar Navigation -->
        <aside id="sidebar" class="w-64 bg-dark-navy/50 backdrop-blur-xl border-r border-purple-500/30 min-h-screen fixed md:relative z-30 transform -translate-x-full md:translate-x-0 transition-transform duration-300">
            <nav class="p-6">
                <ul class="space-y-2">
                    <!-- Dashboard -->
                    <li>
                        <a asp-controller="Admin" asp-action="Index" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
                            </svg>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    
                    <!-- Users Management -->
                    <li>
                        <a asp-controller="Admin" asp-action="Users" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                            </svg>
                            <span>Users</span>
                        </a>
                    </li>
                    
                    <!-- Events -->
                    <li>
                        <a asp-controller="Admin" asp-action="Events" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span>Events</span>
                        </a>
                    </li>
                    
                    <!-- Organizers -->
                    <li>
                        <a asp-controller="Admin" asp-action="Organizers" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            <span>Organizers</span>
                        </a>
                    </li>
                    
                    <!-- Venues -->
                    <li>
                        <a asp-controller="Admin" asp-action="Venues" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            <span>Venues</span>
                        </a>
                    </li>
                    
                    <!-- Reports -->
                    <li>
                        <a asp-controller="Admin" asp-action="Reports" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                            <span>Reports</span>
                        </a>
                    </li>
                    
                    <!-- Settings -->
                    <li>
                        <a asp-controller="Admin" asp-action="Settings" class="flex items-center space-x-3 px-4 py-3 rounded-xl bg-gradient-to-r from-purple-500/20 to-teal-500/20 border border-purple-500/30 text-white font-semibold transition-all duration-200">
                            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <!-- Page Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-teal-400 text-transparent bg-clip-text mb-2">Admin Settings</h1>
                <p class="text-gray-400">Configure system settings, manage platform preferences, and control access</p>
            </div>

        <!-- Settings Tabs -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 mb-8">
            <div class="flex flex-wrap gap-2 mb-6">
                <button onclick="showSettingsTab('general')" class="settings-tab px-4 py-2 rounded-lg font-medium transition-all duration-200 bg-gradient-to-r from-purple-500 to-teal-500 text-white text-sm">
                    General
                </button>
                <button onclick="showSettingsTab('security')" class="settings-tab px-4 py-2 rounded-lg font-medium transition-all duration-200 text-gray-300 hover:text-white hover:bg-white/10 text-sm">
                    Security
                </button>
                <button onclick="showSettingsTab('notifications')" class="settings-tab px-4 py-2 rounded-lg font-medium transition-all duration-200 text-gray-300 hover:text-white hover:bg-white/10 text-sm">
                    Notifications
                </button>
                <button onclick="showSettingsTab('payment')" class="settings-tab px-4 py-2 rounded-lg font-medium transition-all duration-200 text-gray-300 hover:text-white hover:bg-white/10 text-sm">
                    Payment
                </button>
                <button onclick="showSettingsTab('email')" class="settings-tab px-4 py-2 rounded-lg font-medium transition-all duration-200 text-gray-300 hover:text-white hover:bg-white/10 text-sm">
                    Email
                </button>
                <button onclick="showSettingsTab('backup')" class="settings-tab px-4 py-2 rounded-lg font-medium transition-all duration-200 text-gray-300 hover:text-white hover:bg-white/10 text-sm">
                    Backup
                </button>
            </div>

            <!-- General Settings -->
            <div id="general-settings" class="settings-content">
                <h3 class="text-xl font-bold text-white mb-6">General Settings</h3>
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="siteName" class="block text-sm font-medium text-gray-300 mb-2">Site Name</label>
                            <input type="text" id="siteName" name="siteName" value="Event Booking System"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                        
                        <div>
                            <label for="siteUrl" class="block text-sm font-medium text-gray-300 mb-2">Site URL</label>
                            <input type="url" id="siteUrl" name="siteUrl" value="https://eventbooking.com"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                    </div>
                    
                    <div>
                        <label for="siteDescription" class="block text-sm font-medium text-gray-300 mb-2">Site Description</label>
                        <textarea id="siteDescription" name="siteDescription" rows="3"
                                  class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">Your premier destination for event booking and management</textarea>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="timezone" class="block text-sm font-medium text-gray-300 mb-2">Timezone</label>
                            <select id="timezone" name="timezone"
                                    class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                <option value="UTC">UTC</option>
                                <option value="EST">Eastern Time</option>
                                <option value="PST">Pacific Time</option>
                                <option value="GMT">Greenwich Mean Time</option>
                            </select>
                        </div>
                        
                        <div>
                            <label for="currency" class="block text-sm font-medium text-gray-300 mb-2">Default Currency</label>
                            <select id="currency" name="currency"
                                    class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                <option value="USD">USD ($)</option>
                                <option value="EUR">EUR (€)</option>
                                <option value="GBP">GBP (£)</option>
                                <option value="CAD">CAD (C$)</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-3">
                        <input type="checkbox" id="maintenanceMode" name="maintenanceMode" class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                        <label for="maintenanceMode" class="text-sm text-gray-300">Enable maintenance mode</label>
                    </div>
                </div>
            </div>

            <!-- Security Settings -->
            <div id="security-settings" class="settings-content hidden">
                <h3 class="text-xl font-bold text-white mb-6">Security Settings</h3>
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="sessionTimeout" class="block text-sm font-medium text-gray-300 mb-2">Session Timeout (minutes)</label>
                            <input type="number" id="sessionTimeout" name="sessionTimeout" value="30"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                        
                        <div>
                            <label for="maxLoginAttempts" class="block text-sm font-medium text-gray-300 mb-2">Max Login Attempts</label>
                            <input type="number" id="maxLoginAttempts" name="maxLoginAttempts" value="5"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                    </div>
                    
                    <div class="space-y-4">
                        <h4 class="text-lg font-semibold text-white">Password Requirements</h4>
                        <div class="space-y-3">
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="requireUppercase" name="requireUppercase" checked class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="requireUppercase" class="text-sm text-gray-300">Require uppercase letters</label>
                            </div>
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="requireNumbers" name="requireNumbers" checked class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="requireNumbers" class="text-sm text-gray-300">Require numbers</label>
                            </div>
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="requireSymbols" name="requireSymbols" class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="requireSymbols" class="text-sm text-gray-300">Require special characters</label>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <label for="minPasswordLength" class="block text-sm font-medium text-gray-300 mb-2">Minimum Password Length</label>
                        <input type="number" id="minPasswordLength" name="minPasswordLength" value="8"
                               class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                    </div>
                </div>
            </div>

            <!-- Notification Settings -->
            <div id="notifications-settings" class="settings-content hidden">
                <h3 class="text-xl font-bold text-white mb-6">Notification Settings</h3>
                <div class="space-y-6">
                    <div class="space-y-4">
                        <h4 class="text-lg font-semibold text-white">Email Notifications</h4>
                        <div class="space-y-3">
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="newUserNotification" name="newUserNotification" checked class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="newUserNotification" class="text-sm text-gray-300">New user registrations</label>
                            </div>
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="newEventNotification" name="newEventNotification" checked class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="newEventNotification" class="text-sm text-gray-300">New event submissions</label>
                            </div>
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="paymentNotification" name="paymentNotification" checked class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="paymentNotification" class="text-sm text-gray-300">Payment confirmations</label>
                            </div>
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="systemAlertNotification" name="systemAlertNotification" checked class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="systemAlertNotification" class="text-sm text-gray-300">System alerts</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="space-y-4">
                        <h4 class="text-lg font-semibold text-white">Admin Notifications</h4>
                        <div class="space-y-3">
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="dailyReportNotification" name="dailyReportNotification" class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="dailyReportNotification" class="text-sm text-gray-300">Daily summary reports</label>
                            </div>
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="weeklyReportNotification" name="weeklyReportNotification" checked class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="weeklyReportNotification" class="text-sm text-gray-300">Weekly analytics reports</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Settings -->
            <div id="payment-settings" class="settings-content hidden">
                <h3 class="text-xl font-bold text-white mb-6">Payment Settings</h3>
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="platformFee" class="block text-sm font-medium text-gray-300 mb-2">Platform Fee (%)</label>
                            <input type="number" id="platformFee" name="platformFee" value="5" step="0.1"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                        
                        <div>
                            <label for="processingFee" class="block text-sm font-medium text-gray-300 mb-2">Processing Fee (%)</label>
                            <input type="number" id="processingFee" name="processingFee" value="2.9" step="0.1"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                    </div>
                    
                    <div class="space-y-4">
                        <h4 class="text-lg font-semibold text-white">Payment Methods</h4>
                        <div class="space-y-3">
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="stripeEnabled" name="stripeEnabled" checked class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="stripeEnabled" class="text-sm text-gray-300">Stripe</label>
                            </div>
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="paypalEnabled" name="paypalEnabled" class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="paypalEnabled" class="text-sm text-gray-300">PayPal</label>
                            </div>
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="bankTransferEnabled" name="bankTransferEnabled" class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                                <label for="bankTransferEnabled" class="text-sm text-gray-300">Bank Transfer</label>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <label for="payoutSchedule" class="block text-sm font-medium text-gray-300 mb-2">Payout Schedule</label>
                        <select id="payoutSchedule" name="payoutSchedule"
                                class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <option value="daily">Daily</option>
                            <option value="weekly">Weekly</option>
                            <option value="monthly" selected>Monthly</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Email Settings -->
            <div id="email-settings" class="settings-content hidden">
                <h3 class="text-xl font-bold text-white mb-6">Email Settings</h3>
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="smtpHost" class="block text-sm font-medium text-gray-300 mb-2">SMTP Host</label>
                            <input type="text" id="smtpHost" name="smtpHost" value="smtp.gmail.com"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                        
                        <div>
                            <label for="smtpPort" class="block text-sm font-medium text-gray-300 mb-2">SMTP Port</label>
                            <input type="number" id="smtpPort" name="smtpPort" value="587"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="smtpUsername" class="block text-sm font-medium text-gray-300 mb-2">SMTP Username</label>
                            <input type="email" id="smtpUsername" name="smtpUsername"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                        
                        <div>
                            <label for="smtpPassword" class="block text-sm font-medium text-gray-300 mb-2">SMTP Password</label>
                            <input type="password" id="smtpPassword" name="smtpPassword"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-3">
                        <input type="checkbox" id="smtpSsl" name="smtpSsl" checked class="w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500">
                        <label for="smtpSsl" class="text-sm text-gray-300">Use SSL/TLS</label>
                    </div>
                    
                    <div>
                        <label for="fromEmail" class="block text-sm font-medium text-gray-300 mb-2">From Email Address</label>
                        <input type="email" id="fromEmail" name="fromEmail" value="noreply@eventbooking.com"
                               class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                    </div>
                </div>
            </div>

            <!-- Backup Settings -->
            <div id="backup-settings" class="settings-content hidden">
                <h3 class="text-xl font-bold text-white mb-6">Backup Settings</h3>
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="backupFrequency" class="block text-sm font-medium text-gray-300 mb-2">Backup Frequency</label>
                            <select id="backupFrequency" name="backupFrequency"
                                    class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                <option value="daily">Daily</option>
                                <option value="weekly" selected>Weekly</option>
                                <option value="monthly">Monthly</option>
                            </select>
                        </div>
                        
                        <div>
                            <label for="backupRetention" class="block text-sm font-medium text-gray-300 mb-2">Retention Period (days)</label>
                            <input type="number" id="backupRetention" name="backupRetention" value="30"
                                   class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        </div>
                    </div>
                    
                    <div class="space-y-4">
                        <h4 class="text-lg font-semibold text-white">Backup Options</h4>
                        <div class="space-y-3">
