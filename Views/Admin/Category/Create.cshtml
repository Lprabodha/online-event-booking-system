@model online_event_booking_system.Models.CategoryCreateViewModel
@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="min-h-screen bg-dark-navy">
    <!-- Header -->
    <div class="bg-white/5 backdrop-blur-sm border-b border-white/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center">
                    <a asp-action="Index" class="text-gray-400 hover:text-white transition-colors mr-4">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-green-400 to-emerald-400 text-transparent bg-clip-text">
                        Create New Category
                    </h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 p-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm mb-6 bg-red-500/10 border border-red-500/20 rounded-xl p-4"></div>
                
                <div class="space-y-8">
                    <!-- Category Name -->
                    <div>
                        <label asp-for="Name" class="block text-lg font-semibold text-gray-300 mb-3">Category Name *</label>
                        <input asp-for="Name" type="text" class="w-full px-6 py-4 bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all text-lg" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-red-400 text-sm mt-2 block"></span>
                    </div>

                    <!-- Description -->
                    <div>
                        <label asp-for="Description" class="block text-lg font-semibold text-gray-300 mb-3">Description</label>
                        <textarea asp-for="Description" rows="6" class="w-full px-6 py-4 bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all resize-none text-lg" placeholder="Enter category description (optional)"></textarea>
                        <span asp-validation-for="Description" class="text-red-400 text-sm mt-2 block"></span>
                        <p class="text-gray-400 text-sm mt-2">Provide a detailed description of this category to help users understand what types of events it includes.</p>
                    </div>

                    <!-- Is Active -->
                    <div>
                        <div class="flex items-center space-x-3">
                            <input asp-for="IsActive" type="checkbox" class="w-5 h-5 text-green-600 bg-white/10 border-white/20 rounded focus:ring-green-500 focus:ring-2" />
                            <label asp-for="IsActive" class="text-lg font-semibold text-gray-300">Active Category</label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-red-400 text-sm mt-2 block"></span>
                        <p class="text-gray-400 text-sm mt-2">Active categories are visible to users and can be selected when creating events.</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center justify-end space-x-4 mt-12 pt-8 border-t border-white/10">
                    <a asp-action="Index" class="px-8 py-4 rounded-xl text-lg font-semibold text-gray-300 border border-white/20 hover:bg-white/10 transition-all">
                        Cancel
                    </a>
                    <button type="submit" class="bg-gradient-to-r from-green-500 to-emerald-500 text-white px-8 py-4 rounded-xl font-bold hover:from-green-600 hover:to-emerald-600 transition-all transform hover:scale-105 shadow-lg text-lg">
                        Create Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}