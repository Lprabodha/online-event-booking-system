@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<!-- Admin Dashboard Container -->
<div class="min-h-screen bg-dark-navy text-white">
    <!-- Main Content Area -->
    <div class="flex">
        <!-- Sidebar Navigation -->
        <aside id="sidebar" class="w-64 bg-dark-navy/50 backdrop-blur-xl border-r border-purple-500/30 min-h-screen fixed md:relative z-30 transform -translate-x-full md:translate-x-0 transition-transform duration-300">
            <nav class="p-6">
                <ul class="space-y-2">
                    <!-- Dashboard -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl bg-gradient-to-r from-purple-500/20 to-teal-500/20 border border-purple-500/30 text-white font-semibold transition-all duration-200">
                            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
                            </svg>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    
                    <!-- Events -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span>Events</span>
                        </a>
                    </li>
                    
                    <!-- Venues -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            <span>Venues</span>
                        </a>
                    </li>
                    
                    <!-- Users -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                            </svg>
                            <span>Users</span>
                        </a>
                    </li>
                    
                    <!-- Reports -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                            <span>Reports</span>
                        </a>
                    </li>
                    
                    <!-- Discounts -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                            </svg>
                            <span>Discounts</span>
                        </a>
                    </li>
                    
                    <!-- Settings -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span>Settings</span>
                        </a>
                    </li>
                    
                    <!-- Audit Log -->
                    <li>
                        <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-xl text-gray-300 hover:text-white hover:bg-white/10 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            <span>Audit Log</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <!-- Dashboard Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-teal-400 text-transparent bg-clip-text mb-2">Admin Dashboard</h1>
                <p class="text-gray-400">Manage your event platform and monitor system performance</p>
            </div>

            <!-- Filters Section -->
            <div class="mb-8">
                <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0 md:space-x-4">
                    <div class="flex items-center space-x-4">
                        <select class="px-4 py-3 bg-white/10 border border-white/20 rounded-2xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500/50 focus:border-purple-500 backdrop-blur-sm">
                            <option>Today</option>
                            <option>Last 7 Days</option>
                            <option>Last 30 Days</option>
                            <option>Custom Range</option>
                        </select>
                        <select class="px-4 py-3 bg-white/10 border border-white/20 rounded-2xl text-white focus:outline-none focus:ring-2 focus:ring-purple-500/50 focus:border-purple-500 backdrop-blur-sm">
                            <option>All Organizers</option>
                            <option>EventPro Inc</option>
                            <option>Venue Masters</option>
                            <option>ShowTime Events</option>
                        </select>
                    </div>
                    <button class="bg-gradient-to-r from-purple-500 to-teal-500 text-white px-6 py-3 rounded-2xl font-bold hover:from-purple-600 hover:to-teal-600 transition-all transform hover:scale-105 shadow-lg">
                        Apply Filters
                    </button>
                </div>
            </div>

            <!-- KPI Cards Row -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <!-- Total Sales Card -->
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all duration-300">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm font-medium">Total Sales</p>
                            <p class="text-3xl font-bold text-white mt-2">$24,580</p>
                            <p class="text-green-400 text-sm mt-1">+12.5% from last month</p>
                        </div>
                        <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-xl flex items-center justify-center">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Tickets Sold Card -->
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all duration-300">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm font-medium">Tickets Sold</p>
                            <p class="text-3xl font-bold text-white mt-2">1,847</p>
                            <p class="text-blue-400 text-sm mt-1">+8.2% from last month</p>
                        </div>
                        <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Active Events Card -->
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all duration-300">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm font-medium">Active Events</p>
                            <p class="text-3xl font-bold text-white mt-2">42</p>
                            <p class="text-purple-400 text-sm mt-1">+3 new this week</p>
                        </div>
                        <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-xl flex items-center justify-center">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- New Users Card -->
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all duration-300">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-400 text-sm font-medium">New Users</p>
                            <p class="text-3xl font-bold text-white mt-2">156</p>
                            <p class="text-teal-400 text-sm mt-1">+15.3% from last week</p>
                        </div>
                        <div class="w-12 h-12 bg-gradient-to-r from-teal-500 to-cyan-500 rounded-xl flex items-center justify-center">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sales Summary Chart -->
            <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 mb-8">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-white">Sales Summary</h3>
                    <div class="flex space-x-2">
                        <button class="px-4 py-2 bg-gradient-to-r from-purple-500 to-teal-500 text-white rounded-xl text-sm font-semibold">7D</button>
                        <button class="px-4 py-2 bg-white/10 text-gray-300 rounded-xl text-sm font-semibold hover:bg-white/20 transition-all">30D</button>
                        <button class="px-4 py-2 bg-white/10 text-gray-300 rounded-xl text-sm font-semibold hover:bg-white/20 transition-all">YTD</button>
                    </div>
                </div>
                <div class="h-64 bg-white/5 rounded-xl flex items-center justify-center">
                    <p class="text-gray-400">Chart placeholder - Sales data visualization will be rendered here</p>
                </div>
            </div>

            <!-- Content Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Top Performing Events -->
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-white">Top Performing Events</h3>
                        <a href="#" class="text-purple-400 hover:text-purple-300 text-sm font-medium">View All</a>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="border-b border-white/10">
                                    <th class="text-left py-3 text-gray-400 font-medium">Event</th>
                                    <th class="text-left py-3 text-gray-400 font-medium">Organizer</th>
                                    <th class="text-left py-3 text-gray-400 font-medium">Tickets</th>
                                    <th class="text-left py-3 text-gray-400 font-medium">Revenue</th>
                                    <th class="text-left py-3 text-gray-400 font-medium">Status</th>
                                    <th class="text-left py-3 text-gray-400 font-medium">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < 5; i++)
                                {
                                    <tr class="border-b border-white/5 hover:bg-white/5 transition-all">
                                        <td class="py-3">
                                            <div>
                                                <p class="text-white font-medium">Summer Music Festival @(i + 1)</p>
                                                <p class="text-gray-400 text-sm">Dec @(15 + i), 2024</p>
                                            </div>
                                        </td>
                                        <td class="py-3 text-gray-300">EventPro Inc</td>
                                        <td class="py-3 text-gray-300">@(150 + i * 25)</td>
                                        <td class="py-3 text-gray-300">$@(2500 + i * 500)</td>
                                        <td class="py-3">
                                            <span class="px-3 py-1 bg-green-500/20 text-green-400 rounded-full text-xs font-medium">Active</span>
                                        </td>
                                        <td class="py-3">
                                            <div class="flex space-x-2">
                                                <button class="text-purple-400 hover:text-purple-300">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                    </svg>
                                                </button>
                                                <button class="text-blue-400 hover:text-blue-300">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- User Overview -->
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-white">User Overview</h3>
                        <a href="#" class="text-purple-400 hover:text-purple-300 text-sm font-medium">View All</a>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="border-b border-white/10">
                                    <th class="text-left py-3 text-gray-400 font-medium">Name</th>
                                    <th class="text-left py-3 text-gray-400 font-medium">Role</th>
                                    <th class="text-left py-3 text-gray-400 font-medium">Status</th>
                                    <th class="text-left py-3 text-gray-400 font-medium">Last Active</th>
                                    <th class="text-left py-3 text-gray-400 font-medium">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < 5; i++)
                                {
                                    var roles = new[] { "Customer", "Admin", "Organizer" };
                                    var statuses = new[] { "Active", "Suspended", "Pending" };
                                    var statusColors = new[] { "green", "red", "yellow" };
                                    var role = roles[i % 3];
                                    var status = statuses[i % 3];
                                    var statusColor = statusColors[i % 3];
                                    
                                    <tr class="border-b border-white/5 hover:bg-white/5 transition-all">
                                        <td class="py-3">
                                            <div class="flex items-center space-x-3">
                                                <div class="w-8 h-8 bg-gradient-to-r from-purple-500 to-teal-500 rounded-full flex items-center justify-center">
                                                    <span class="text-white text-sm font-bold">@(char.ToUpper((char)(65 + i)))</span>
                                                </div>
                                                <div>
                                                    <p class="text-white font-medium">User @(i + 1)</p>
                                                    <p class="text-gray-400 text-sm">user@(i + 1)example.com</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <span class="px-3 py-1 bg-purple-500/20 text-purple-400 rounded-full text-xs font-medium">@role</span>
                                        </td>
                                        <td class="py-3">
                                            <span class="px-3 py-1 bg-@(statusColor)-500/20 text-@(statusColor)-400 rounded-full text-xs font-medium">@status</span>
                                        </td>
                                        <td class="py-3 text-gray-300">@(i + 1) hours ago</td>
                                        <td class="py-3">
                                            <div class="flex space-x-2">
                                                <button class="text-purple-400 hover:text-purple-300">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                    </svg>
                                                </button>
                                                <button class="text-blue-400 hover:text-blue-300">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Bottom Row -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mt-8">
                <!-- Venue Utilization -->
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-white">Venue Utilization</h3>
                        <a href="#" class="text-purple-400 hover:text-purple-300 text-sm font-medium">View All</a>
                    </div>
                    <div class="space-y-4">
                        @for (var i = 0; i < 4; i++)
                        {
                            <div class="p-4 bg-white/5 rounded-xl">
                                <div class="flex items-center justify-between mb-2">
                                    <h4 class="text-white font-medium">Venue @(i + 1)</h4>
                                    <span class="text-gray-400 text-sm">@(60 + i * 10)%</span>
                                </div>
                                <div class="w-full bg-white/10 rounded-full h-2 mb-2">
                                    <div class="bg-gradient-to-r from-purple-500 to-teal-500 h-2 rounded-full" style="width: @(60 + i * 10)%"></div>
                                </div>
                                <p class="text-gray-400 text-sm">@(3 + i) upcoming events</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- System Activity Feed -->
                <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-white">System Activity</h3>
                        <a href="#" class="text-purple-400 hover:text-purple-300 text-sm font-medium">View All</a>
                    </div>
                    <div class="space-y-4">
                        @for (var i = 0; i < 4; i++)
                        {
                            var activities = new[] { 
                                "Created new event 'Summer Festival'", 
                                "Updated venue 'Concert Hall' details", 
                                "User 'john@example.com' suspended", 
                                "New discount code 'SUMMER20' added" 
                            };
                            var times = new[] { "2 min ago", "15 min ago", "1 hour ago", "3 hours ago" };
                            
                            <div class="flex items-start space-x-3 p-3 bg-white/5 rounded-xl">
                                <div class="w-2 h-2 bg-purple-400 rounded-full mt-2"></div>
                                <div class="flex-1">
                                    <p class="text-white text-sm">@activities[i]</p>
