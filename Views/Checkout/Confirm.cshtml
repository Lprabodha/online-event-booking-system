@model online_event_booking_system.Data.Entities.Booking
@{
    ViewData["Title"] = "Booking Confirmation";
}

<section class="bg-gradient-to-br from-green-500 to-teal-600 py-20 min-h-screen">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            <!-- Success Header -->
            <div class="text-center mb-12">
                <div class="w-24 h-24 bg-white rounded-full flex items-center justify-center mx-auto mb-6 shadow-2xl">
                    <svg class="w-12 h-12 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <h1 class="text-5xl font-bold text-white mb-4">Booking Confirmed!</h1>
                <p class="text-xl text-green-100">Your tickets have been successfully purchased</p>
            </div>

            <!-- Booking Details Card -->
            <div class="bg-white/10 backdrop-blur-sm rounded-3xl shadow-2xl p-8 mb-8 border border-white/20">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Event Information -->
                    <div>
                        <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
                            <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                            </svg>
                            Event Details
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <h3 class="text-3xl font-bold text-white">@Model.Event.Title</h3>
                                <p class="text-green-100 mt-2">@Model.Event.Description</p>
                            </div>
                            <div class="space-y-2">
                                <div class="flex items-center text-white">
                                    <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="font-semibold">@Model.Event.EventDate.ToString("MMMM dd, yyyy") • @Model.Event.EventTime.ToString("HH:mm")</span>
                                </div>
                                <div class="flex items-center text-white">
                                    <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="font-semibold">@Model.Event.Venue?.Name</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Booking Information -->
                    <div>
                        <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
                            <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                            </svg>
                            Booking Information
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="text-green-100 text-sm font-semibold">Booking Reference</label>
                                <p class="text-2xl font-bold text-white">@Model.BookingReference</p>
                            </div>
                            <div>
                                <label class="text-green-100 text-sm font-semibold">Customer</label>
                                <p class="text-white">@Model.Customer.FullName</p>
                                <p class="text-green-100">@Model.Customer.Email</p>
                            </div>
                            <div>
                                <label class="text-green-100 text-sm font-semibold">Booking Date</label>
                                <p class="text-white">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                            </div>
                            <div>
                                <label class="text-green-100 text-sm font-semibold">Status</label>
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                    @Model.Status
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tickets Section -->
            <div class="bg-white/10 backdrop-blur-sm rounded-3xl shadow-2xl p-8 mb-8 border border-white/20">
                <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
                    <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                    </svg>
                    Your Tickets (@Model.Tickets.Count)
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    @foreach (var ticket in Model.Tickets)
                    {
                        <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 border border-white/30">
                            <div class="flex items-center justify-between mb-4">
                                <div>
                                    <h3 class="text-xl font-bold text-white">@ticket.EventPrice.Category</h3>
                                    <p class="text-green-100">@ticket.EventPrice.Description</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-2xl font-bold text-white">$@ticket.EventPrice.Price.ToString("F2")</p>
                                    <p class="text-green-100 text-sm">Ticket #@ticket.TicketNumber</p>
                                </div>
                            </div>
                            
                            <div class="border-t border-white/20 pt-4">
                                <div class="text-center">
                                    <img src="@ticket.QRCode" alt="QR Code" class="w-32 h-32 mx-auto mb-3 bg-white rounded-lg p-2">
                                    <p class="text-green-100 text-sm">Scan this QR code at the entrance</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Important Information -->
            <div class="bg-yellow-500/20 backdrop-blur-sm rounded-3xl shadow-2xl p-8 mb-8 border border-yellow-500/30">
                <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
                    <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                    </svg>
                    Important Information
                </h2>
                <div class="space-y-4 text-white">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 mr-3 mt-0.5 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <p>Please bring a valid ID and show your QR code at the entrance.</p>
                    </div>
                    <div class="flex items-start">
                        <svg class="w-5 h-5 mr-3 mt-0.5 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <p>Your tickets have been sent to your email address.</p>
                    </div>
                    <div class="flex items-start">
                        <svg class="w-5 h-5 mr-3 mt-0.5 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <p>Please arrive at least 30 minutes before the event starts.</p>
                    </div>
                    <div class="flex items-start">
                        <svg class="w-5 h-5 mr-3 mt-0.5 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <p>Keep this confirmation page as a backup reference.</p>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="@Url.Action("Index", "Customer")" 
                   class="px-8 py-4 bg-white text-green-600 rounded-2xl font-bold hover:bg-green-50 transition-all text-center">
                    View All Bookings
                </a>
                <button onclick="window.print()" 
                        class="px-8 py-4 bg-green-500/20 text-white rounded-2xl font-bold hover:bg-green-500/30 transition-all border border-green-500/30">
                    Print Tickets
                </button>
                <a href="@Url.Action("Details", "Events", new { id = Model.EventId })" 
                   class="px-8 py-4 bg-transparent text-white rounded-2xl font-bold hover:bg-white/10 transition-all border border-white/30 text-center">
                    Event Details
                </a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Print functionality
        function printTickets() {
            window.print();
        }

        // Auto-hide success message after 10 seconds
        setTimeout(function() {
            const successMessage = document.querySelector('.success-message');
            if (successMessage) {
                successMessage.style.opacity = '0';
                setTimeout(() => successMessage.remove(), 500);
            }
        }, 10000);
    </script>
}