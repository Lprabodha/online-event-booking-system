        document.querySelectorAll('.category-item').forEach(item => {
            if (category === 'all' || item.classList.contains(category.toLowerCase())) {
                item.style.display = 'block';
                item.style.opacity = '0';
                setTimeout(() => {
                    item.style.opacity = '1';
                }, 100);
            } else {
                item.style.opacity = '0';
                setTimeout(() => {
                    item.style.display = 'none';
                }, 300);
            }
        });
    }

    // Enhanced search functionality
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const quickFilters = document.querySelectorAll('.quick-filter');
        const searchButton = document.getElementById('searchButton');
        
        // Add search input animation
        searchInput.addEventListener('focus', function() {
            this.parentElement.parentElement.classList.add('ring-2', 'ring-purple-500/50');
        });
        
        searchInput.addEventListener('blur', function() {
            this.parentElement.parentElement.classList.remove('ring-2', 'ring-purple-500/50');
        });
        
        // Quick filter functionality: navigate to events with query
        quickFilters.forEach(filter => {
            filter.addEventListener('click', function() {
                const query = this.dataset.query || this.textContent.trim();
                window.location.href = `/events?search=${encodeURIComponent(query)}`;
            });
        });

        function submitSearch() {
            const query = searchInput.value.trim();
            const url = query ? `/events?search=${encodeURIComponent(query)}` : '/events';
            window.location.href = url;
        }

        // Submit search on button click or Enter key
        if (searchButton) {
            searchButton.addEventListener('click', submitSearch);
        }
        searchInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                submitSearch();
            }
        });
        
        // Add smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });
</script>
