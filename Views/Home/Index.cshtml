<!-- Featured Events with Dark Theme and Mobile Responsiveness -->
<section class="py-12 sm:py-16 lg:py-24 bg-dark-navy">
    <div class="container mx-auto px-4 sm:px-6">
        <div class="text-center mb-12 sm:mb-16 lg:mb-20 px-4 sm:px-6">
            <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-white mb-4 sm:mb-6 lg:mb-8">Featured Events</h2>
            <p class="text-base sm:text-lg lg:text-xl text-gray-300 max-w-3xl mx-auto text-pretty px-2">Don't miss out on these incredible experiences happening soon</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8 px-2 sm:px-4">
            @if (Model.UpcomingEvents != null && Model.UpcomingEvents.Any())
            {
                @foreach (var evt in Model.UpcomingEvents.Take(3))
                {
                    var minPrice = evt.Prices?.Where(p => p.IsActive).Min(p => p.Price) ?? 0;
                    var maxPrice = evt.Prices?.Where(p => p.IsActive).Max(p => p.Price) ?? 0;
                    var eventDate = evt.EventDate.ToString("MMM dd, yyyy");
                    var eventTime = evt.EventTime.ToString("h:mm tt");
                    var imageUrl = !string.IsNullOrEmpty(evt.Image) ? evt.Image : "/images/placeholder.svg";
                    var priceDisplay = minPrice > 0 ? (minPrice == maxPrice ? $"LKR {minPrice}" : $"LKR {minPrice} - {maxPrice}") : "Free";
                    var daysUntilEvent = (evt.EventDate - DateTime.UtcNow).Days;
                    var isSoon = daysUntilEvent <= 7 && daysUntilEvent > 0;
                    
                    <div class="group bg-dark-blue/50 backdrop-blur-sm rounded-2xl sm:rounded-3xl shadow-2xl overflow-hidden hover:shadow-purple-500/25 transition-all duration-500 transform hover:-translate-y-4 border border-gray-700 hover:border-purple-500/50">
                        <div class="relative overflow-hidden">
                            <img src="@imageUrl" alt="@evt.Title" class="w-full h-48 sm:h-56 md:h-72 object-cover group-hover:scale-110 transition-transform duration-500">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                            <div class="absolute top-2 sm:top-4 left-2 sm:left-4">
                                <span class="bg-gradient-to-r from-purple-500 to-teal-500 text-white text-xs sm:text-sm font-bold px-2 sm:px-4 py-1 sm:py-2 rounded-full shadow-lg">@evt.Category?.Name</span>
                            </div>
                            <div class="absolute top-2 sm:top-4 right-2 sm:right-4">
                                <span class="bg-white/90 backdrop-blur-sm text-dark-navy text-sm sm:text-lg font-bold px-2 sm:px-4 py-1 sm:py-2 rounded-full shadow-lg">@priceDisplay</span>
                            </div>
                            @if (isSoon)
                            {
                                <div class="absolute top-2 sm:top-4 left-2 sm:left-4 mt-8 sm:mt-12">
                                    <span class="bg-red-500/90 backdrop-blur-sm text-white text-xs sm:text-sm font-bold px-2 sm:px-3 py-1 rounded-full shadow-lg animate-pulse">@daysUntilEvent days left!</span>
                                </div>
                            }
                            <div class="absolute bottom-2 sm:bottom-4 left-2 sm:right-4 right-2 sm:right-4">
                                <div class="flex items-center text-white text-xs sm:text-sm">
                                    <svg class="w-3 h-3 sm:w-4 sm:h-4 mr-1 sm:mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span class="hidden sm:inline">@eventDate • @eventTime</span>
                                    <span class="sm:hidden">@evt.EventDate.ToString("MMM dd") • @evt.EventTime.ToString("h:mm tt")</span>
                                </div>
                            </div>
                        </div>
                        <div class="p-4 sm:p-6 md:p-8">
                            <h3 class="text-lg sm:text-xl md:text-2xl font-bold text-white mb-3 sm:mb-4">@evt.Title</h3>
                            <p class="text-gray-300 mb-4 sm:mb-6 leading-relaxed text-xs sm:text-sm md:text-base">@(evt.Description?.Length > 100 ? evt.Description.Substring(0, 100) + "..." : evt.Description)</p>
                            <a href="/events/@evt.Id" class="block w-full bg-gradient-to-r from-purple-500 to-teal-500 text-white text-center py-2 sm:py-3 md:py-4 rounded-xl sm:rounded-2xl font-bold text-sm sm:text-base md:text-lg hover:from-purple-600 hover:to-teal-600 transition-all transform hover:scale-105 shadow-lg min-h-[44px] flex items-center justify-center">
                                View Details
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Fallback content when no events are available -->
                <div class="col-span-full text-center py-12">
                    <div class="text-gray-400 text-lg">No upcoming events available at the moment.</div>
                </div>
            }
        </div>
        
        <!-- View All Events Button -->
        @if (Model.UpcomingEvents != null && Model.UpcomingEvents.Count() > 3)
        {
            <div class="text-center mt-12">
                <a href="/Events" class="inline-flex items-center gap-2 bg-gradient-to-r from-purple-500 to-teal-500 text-white px-8 py-4 rounded-2xl font-bold text-lg hover:from-purple-600 hover:to-teal-600 transition-all transform hover:scale-105 shadow-lg">
                    <span>View All Events</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        }
    </div>
</section>

