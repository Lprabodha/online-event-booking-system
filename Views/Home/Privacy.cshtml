@{
    ViewData["Title"] = "Privacy Policy";
    ViewData["Description"] = "Learn how TicketBooking collects, uses, and protects your personal information. Our comprehensive privacy policy explains your rights and our data practices.";
}

<section class="min-h-screen bg-navy-950 text-white py-24 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 right-20 w-64 h-64 bg-gradient-to-r from-purple-400 to-teal-400 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-20 left-20 w-48 h-48 bg-gradient-to-r from-teal-400 to-purple-400 rounded-full blur-2xl animate-pulse delay-1000"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-16">
            <h1 class="text-5xl md:text-7xl font-bold mb-8">
                Privacy <span class="bg-gradient-to-r from-purple-400 to-teal-400 text-transparent bg-clip-text">Policy</span>
            </h1>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
                Your privacy is important to us. This policy explains how we collect, use, and protect your personal information.
            </p>
            <div class="mt-6 text-gray-400">
                <p>Last updated: <span class="text-purple-400 font-semibold">January 15, 2024</span></p>
            </div>
        </div>

        <div class="max-w-4xl mx-auto mb-16">
            <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10">
                <h2 class="text-2xl font-bold text-white mb-6">Table of Contents</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <a href="#information-collection" class="text-purple-400 hover:text-purple-300 transition-colors flex items-center">
                        <span class="w-2 h-2 bg-purple-400 rounded-full mr-3"></span>
                        Information We Collect
                    </a>
                    <a href="#information-use" class="text-purple-400 hover:text-purple-300 transition-colors flex items-center">
                        <span class="w-2 h-2 bg-purple-400 rounded-full mr-3"></span>
                        How We Use Information
                    </a>
                    <a href="#information-sharing" class="text-purple-400 hover:text-purple-300 transition-colors flex items-center">
                        <span class="w-2 h-2 bg-purple-400 rounded-full mr-3"></span>
                        Information Sharing
                    </a>
                    <a href="#data-security" class="text-purple-400 hover:text-purple-300 transition-colors flex items-center">
                        <span class="w-2 h-2 bg-purple-400 rounded-full mr-3"></span>
                        Data Security
                    </a>
                    <a href="#cookies" class="text-purple-400 hover:text-purple-300 transition-colors flex items-center">
                        <span class="w-2 h-2 bg-purple-400 rounded-full mr-3"></span>
